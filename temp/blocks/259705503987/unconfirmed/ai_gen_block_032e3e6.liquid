{% doc %}
  @prompt
    Create a block showing 3 products

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .product-showcase-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: {{ block.settings.gap }}px;
    margin-bottom: 20px;
  }

  .product-card-{{ ai_gen_id }} {
    flex: 1;
    min-width: calc(33.333% - {{ block.settings.gap | times: 2 | divided_by: 3 }}px);
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
  }

  @media screen and (max-width: 749px) {
    .product-card-{{ ai_gen_id }} {
      min-width: calc(50% - {{ block.settings.gap | times: 1 | divided_by: 2 }}px);
    }
    
    {% if block.settings.columns_mobile == '1' %}
      .product-card-{{ ai_gen_id }} {
        min-width: 100%;
      }
    {% endif %}
  }

  .product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  .product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    padding-bottom: {{ block.settings.image_ratio }}%;
    overflow: hidden;
  }

  .product-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.image_fit }};
  }

  .product-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .product-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    opacity: 0.3;
  }

  .product-info-{{ ai_gen_id }} {
    padding: 15px;
  }

  .product-title-{{ ai_gen_id }} {
    margin: 0 0 10px 0;
    font-size: {{ block.settings.title_font_size }}px;
    color: {{ block.settings.title_color }};
    font-weight: {{ block.settings.title_font_weight }};
  }

  .product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_font_size }}px;
    color: {{ block.settings.price_color }};
    margin-bottom: 10px;
  }

  .product-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 8px 16px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: 4px;
    font-size: 14px;
    transition: background-color 0.3s ease;
  }

  .product-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .product-showcase-heading-{{ ai_gen_id }} {
    width: 100%;
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: 20px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_font_size }}px;
  }
{% endstyle %}

<div class="product-showcase-container" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h2 class="product-showcase-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
  {% endif %}
  
  <div class="product-showcase-{{ ai_gen_id }}">
    {% for product_item in block.settings.product_list %}
      {% if product_item != blank %}
        <div class="product-card-{{ ai_gen_id }}">
          <a href="{{ product_item.url }}">
            <div class="product-image-wrapper-{{ ai_gen_id }}">
              {% if product_item.featured_image %}
                <img 
                  src="{{ product_item.featured_image | image_url: width: 500 }}" 
                  alt="{{ product_item.featured_image.alt | escape }}" 
                  class="product-image-{{ ai_gen_id }}" 
                  loading="lazy"
                  width="{{ product_item.featured_image.width }}"
                  height="{{ product_item.featured_image.height }}"
                >
              {% else %}
                <div class="product-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-apparel-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
          </a>
          
          <div class="product-info-{{ ai_gen_id }}">
            <h3 class="product-title-{{ ai_gen_id }}">{{ product_item.title }}</h3>
            
            <div class="product-price-{{ ai_gen_id }}">
              {% if product_item.compare_at_price > product_item.price %}
                <span class="product-price-sale">{{ product_item.price | money }}</span>
                <s class="product-price-compare">{{ product_item.compare_at_price | money }}</s>
              {% else %}
                <span>{{ product_item.price | money }}</span>
              {% endif %}
            </div>
            
            {% if block.settings.show_button %}
              <a href="{{ product_item.url }}" class="product-button-{{ ai_gen_id }}">
                {{ block.settings.button_text }}
              </a>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Featured Products",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "product_list",
      "id": "product_list",
      "label": "Products",
      "limit": 3
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "gap",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Gap between products",
      "default": 20
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "label": "Columns on mobile",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        }
      ],
      "default": "1"
    },
    {
      "type": "header",
      "content": "Product Cards"
    },
    {
      "type": "range",
      "id": "image_ratio",
      "min": 50,
      "max": 150,
      "step": 5,
      "unit": "%",
      "label": "Image aspect ratio",
      "default": 100
    },
    {
      "type": "select",
      "id": "image_fit",
      "options": [
        {
          "value": "cover",
          "label": "Cover"
        },
        {
          "value": "contain",
          "label": "Contain"
        }
      ],
      "default": "cover",
      "label": "Image fit"
    },
    {
      "type": "range",
      "id": "card_border_radius",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Card border radius",
      "default": 8
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "min": 16,
      "max": 40,
      "step": 1,
      "unit": "px",
      "label": "Heading font size",
      "default": 24
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Heading alignment"
    },
    {
      "type": "range",
      "id": "title_font_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Product title font size",
      "default": 16
    },
    {
      "type": "select",
      "id": "title_font_weight",
      "options": [
        {
          "value": "normal",
          "label": "Normal"
        },
        {
          "value": "bold",
          "label": "Bold"
        }
      ],
      "default": "bold",
      "label": "Product title font weight"
    },
    {
      "type": "range",
      "id": "price_font_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Price font size",
      "default": 14
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "card_background_color",
      "label": "Card background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Product title color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "price_color",
      "label": "Price color",
      "default": "#333333"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "checkbox",
      "id": "show_button",
      "label": "Show button",
      "default": true
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "View Product"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button color",
      "default": "#000f9f"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "Button hover color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Featured Products"
    }
  ]
}
{% endschema %}
{% doc %}
  @prompt
    Large Text Filled with an image, Add the option to change the background colour for the block , Now make it two columns. Leave the Text content on the left and in the right add a product card

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-text-product-block-{{ ai_gen_id }} {
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-text-product-container-{{ ai_gen_id }} {
    display: flex;
    flex-direction: row;
    gap: {{ block.settings.gap }}px;
  }

  .ai-text-column-{{ ai_gen_id }} {
    flex: 1;
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.content_border_radius }}px;
    min-height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-text-bg-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-text-bg-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-text-bg-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .ai-text-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    padding: {{ block.settings.text_padding }}px;
    max-width: 100%;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-text-heading-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    margin-top: 0;
    margin-bottom: 20px;
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
  }

  .ai-text-body-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
  }

  .ai-product-column-{{ ai_gen_id }} {
    flex: 1;
    border-radius: {{ block.settings.content_border_radius }}px;
    overflow: hidden;
    background-color: {{ block.settings.product_card_bg_color }};
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .ai-product-image-{{ ai_gen_id }} {
    width: 100%;
    position: relative;
    padding-bottom: 100%;
    overflow: hidden;
  }

  .ai-product-image-{{ ai_gen_id }} img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 80%;
    height: 80%;
  }

  .ai-product-details-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-product-title-{{ ai_gen_id }} {
    margin-top: 0;
    margin-bottom: 10px;
    font-size: 18px;
    color: {{ block.settings.product_text_color }};
  }

  .ai-product-price-{{ ai_gen_id }} {
    margin-bottom: 15px;
    font-size: 16px;
    font-weight: bold;
    color: {{ block.settings.product_text_color }};
  }

  .ai-product-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 10px 20px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: 4px;
    font-size: 14px;
    transition: background-color 0.3s;
  }

  .ai-product-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-text-product-container-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-text-column-{{ ai_gen_id }}, 
    .ai-product-column-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-text-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-text-body-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-text-product-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-text-product-container-{{ ai_gen_id }}">
    <div class="ai-text-column-{{ ai_gen_id }}">
      <div class="ai-text-bg-{{ ai_gen_id }}">
        {% if block.settings.background_image %}
          <img 
            src="{{ block.settings.background_image | image_url: width: 1500 }}"
            alt="{{ block.settings.background_image.alt | escape }}"
            width="{{ block.settings.background_image.width }}"
            height="{{ block.settings.background_image.height }}"
            loading="lazy"
          >
        {% else %}
          <div class="ai-text-bg-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
      <div class="ai-text-bg-overlay-{{ ai_gen_id }}"></div>
      <div class="ai-text-content-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-text-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.text != blank %}
          <div class="ai-text-body-{{ ai_gen_id }}">{{ block.settings.text }}</div>
        {% endif %}
      </div>
    </div>

    <div class="ai-product-column-{{ ai_gen_id }}">
      {% if block.settings.product %}
        <div class="ai-product-image-{{ ai_gen_id }}">
          {% if block.settings.product.featured_image %}
            <img 
              src="{{ block.settings.product.featured_image | image_url: width: 600 }}"
              alt="{{ block.settings.product.featured_image.alt | escape }}"
              width="{{ block.settings.product.featured_image.width }}"
              height="{{ block.settings.product.featured_image.height }}"
              loading="lazy"
            >
          {% else %}
            <div class="ai-product-image-placeholder-{{ ai_gen_id }}">
              {{ 'product-apparel-1' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>
        <div class="ai-product-details-{{ ai_gen_id }}">
          <h3 class="ai-product-title-{{ ai_gen_id }}">{{ block.settings.product.title }}</h3>
          <div class="ai-product-price-{{ ai_gen_id }}">{{ block.settings.product.price | money }}</div>
          <a href="{{ block.settings.product.url }}" class="ai-product-button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        </div>
      {% else %}
        <div class="ai-product-image-{{ ai_gen_id }}">
          <div class="ai-product-image-placeholder-{{ ai_gen_id }}">
            {{ 'product-apparel-1' | placeholder_svg_tag }}
          </div>
        </div>
        <div class="ai-product-details-{{ ai_gen_id }}">
          <h3 class="ai-product-title-{{ ai_gen_id }}">Product Title</h3>
          <div class="ai-product-price-{{ ai_gen_id }}">$19.99</div>
          <a href="#" class="ai-product-button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</div>


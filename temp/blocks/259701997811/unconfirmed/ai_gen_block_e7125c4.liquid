    {
      "type": "range",
      "id": "padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding",
      "default": 20
    },
    {
      "type": "header",
      "content": "Outline Settings"
    },
    {
      "type": "checkbox",
      "id": "show_outline",
      "label": "Show text outline",
      "default": false
    },
    {
      "type": "range",
      "id": "outline_width",
      "min": 1,
      "max": 5,
      "step": 1,
      "unit": "px",
      "label": "Outline width",
      "default": 2

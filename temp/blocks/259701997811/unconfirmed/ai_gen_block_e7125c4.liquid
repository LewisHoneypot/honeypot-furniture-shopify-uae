{% doc %}
  @prompt
    Large Text Filled with an image, Add the option to change the background colour for the block


{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .image-text-block-{{ ai_gen_id }} {
    display: flex;
    justify-content: {{ block.settings.text_alignment }};
    padding: {{ block.settings.padding }}px;
    max-width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
  }

  .image-text-content-{{ ai_gen_id }} {
    position: relative;
    display: inline-block;
    max-width: 100%;
  }

  .image-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    line-height: 1.2;
    margin: 0;
    padding: 0;
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
    background-size: cover;
    background-position: center;
    {% if block.settings.image %}
      background-image: url({{ block.settings.image | image_url }});
    {% else %}
      background-color: {{ block.settings.fallback_color }};
    {% endif %}
    text-transform: {{ block.settings.text_transform }};
  }

  .image-text-outline-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    line-height: 1.2;
    margin: 0;
    padding: 0;
    -webkit-text-stroke: {{ block.settings.outline_width }}px {{ block.settings.outline_color }};
    color: transparent;
    text-transform: {{ block.settings.text_transform }};
    z-index: -1;
  }

  @media screen and (max-width: 749px) {
    .image-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size_mobile }}px;
    }
    
    .image-text-outline-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size_mobile }}px;
    }
  }
{% endstyle %}

<div class="image-text-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="image-text-content-{{ ai_gen_id }}">
    <h2 class="image-text-{{ ai_gen_id }}">{{ block.settings.text }}</h2>
    {% if block.settings.show_outline %}
      <h2 class="image-text-outline-{{ ai_gen_id }}">{{ block.settings.text }}</h2>
    {% endif %}
  </div>
</div>


    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Fill image"
    },
    {
      "type": "color",
      "id": "fallback_color",
      "label": "Fallback color (if no image)",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "color",
      "id": "background_color",

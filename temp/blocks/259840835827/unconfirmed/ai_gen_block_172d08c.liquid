{% doc %}
  @prompt
    Create a split-layout block titled “Why we love the [Product Name]”. The block should have:
Left Section:

A large, full-height lifestyle image showcasing the product.
Allow merchants to upload and replace the image easily.
Right Section:

A vertical stack of three (3) image tiles.
Each tile must include:
An image (editable)
A caption text below the image (editable individually)
Optional: Add a subtle border and padding for neat alignment.
Allow merchants to:
Upload/change each tile’s image
Edit the caption text per tile via custom inputs
Set a consistent font style and size for all tile captions
Block-Wide Controls:

Editable main heading text (e.g. “Why we love the Dubai Feather Cloud”)
Responsive layout: stack vertically on mobile (image on top, tiles below)
Option to change spacing between elements and background colour
Clean, modern design with centred alignment of tile text

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-split-layout-{{ ai_gen_id }} {
    display: flex;
    flex-direction: row;
    gap: {{ block.settings.spacing }}px;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding }}px;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-split-layout__main-image-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
  }

  .ai-split-layout__main-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-split-layout__main-image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-split-layout__main-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-split-layout__main-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-split-layout__tiles-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.spacing }}px;
    min-width: 0;
  }

  .ai-split-layout__heading-{{ ai_gen_id }} {
    margin-top: 0;
    margin-bottom: {{ block.settings.spacing }}px;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
  }

  .ai-split-layout__tile-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.spacing | divided_by: 2 }}px;
    flex: 1;
  }

  .ai-split-layout__tile-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    {% if block.settings.tile_border %}
      border: 1px solid {{ block.settings.tile_border_color }};
      padding: {{ block.settings.tile_padding }}px;
    {% endif %}
  }

  .ai-split-layout__tile-image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-split-layout__tile-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 16/9;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-split-layout__tile-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
  }

  .ai-split-layout__tile-caption-{{ ai_gen_id }} {
    text-align: center;
    font-size: {{ block.settings.caption_size }}px;
    color: {{ block.settings.caption_color }};
    font-weight: {{ block.settings.caption_weight }};
  }

  @media screen and (max-width: 749px) {
    .ai-split-layout-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-split-layout__main-image-wrapper-{{ ai_gen_id }} {
      aspect-ratio: 16/9;
    }

    .ai-split-layout__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-split-layout__tile-caption-{{ ai_gen_id }} {
      font-size: {{ block.settings.caption_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-split-layout-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-split-layout__main-image-{{ ai_gen_id }}">
    {% if block.settings.main_image %}
      <div class="ai-split-layout__main-image-wrapper-{{ ai_gen_id }}">
        <img 
          src="{{ block.settings.main_image | image_url: width: 1000 }}" 
          alt="{{ block.settings.main_image.alt | escape }}"
          width="{{ block.settings.main_image.width }}"
          height="{{ block.settings.main_image.height }}"
          loading="lazy"
        >
      </div>
    {% else %}
      <div class="ai-split-layout__main-image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  <div class="ai-split-layout__tiles-{{ ai_gen_id }}">
    <h2 class="ai-split-layout__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>

    {% for i in (1..3) %}
      {% assign image_key = 'tile_image_' | append: i %}
      {% assign caption_key = 'tile_caption_' | append: i %}
      
      <div class="ai-split-layout__tile-{{ ai_gen_id }}">
        <div class="ai-split-layout__tile-image-wrapper-{{ ai_gen_id }}">
          {% if block.settings[image_key] %}
            <img 
              src="{{ block.settings[image_key] | image_url: width: 500 }}" 
              alt="{{ block.settings[image_key].alt | escape }}"
              width="{{ block.settings[image_key].width }}"
              height="{{ block.settings[image_key].height }}"
              loading="lazy"
            >
          {% else %}
            <div class="ai-split-layout__tile-image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>
        <p class="ai-split-layout__tile-caption-{{ ai_gen_id }}">{{ block.settings[caption_key] }}</p>
      </div>
    {% endfor %}
  </div>
</div>


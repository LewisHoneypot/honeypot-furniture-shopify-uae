{% doc %}
  @prompt
    I need a block which has a line of text saying Pick your size colour layout. The words size colour layout need to be sat vertically and animated like a scroller. Only show one of them at a time

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-word-scroller-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: {{ block.settings.gap }}px;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-word-scroller-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    font-weight: {{ block.settings.text_weight }};
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  .ai-word-scroller-words-{{ ai_gen_id }} {
    position: relative;
    display: inline-block;
    height: 1.2em;
    overflow: hidden;
    vertical-align: top;
    margin-left: {{ block.settings.gap }}px;
  }

  .ai-word-scroller-word-{{ ai_gen_id }} {
    position: absolute;
    width: 100%;
    opacity: 0;
    transform: translateY(50px);
    color: {{ block.settings.highlight_color }};
    font-weight: {{ block.settings.highlight_weight }};
  }

  .ai-word-scroller-word-{{ ai_gen_id }}.active {
    opacity: 1;
    transform: translateY(0);
    transition: opacity 0.5s ease, transform 0.5s ease;
  }

  .ai-word-scroller-word-{{ ai_gen_id }}.inactive {
    opacity: 0;
    transform: translateY(-50px);
    transition: opacity 0.5s ease, transform 0.5s ease;
  }

  @media screen and (max-width: 749px) {
    .ai-word-scroller-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-word-scroller-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <p class="ai-word-scroller-text-{{ ai_gen_id }}">{{ block.settings.prefix_text }}</p>
  <div class="ai-word-scroller-words-{{ ai_gen_id }}">
    {% for word in block.settings.rotating_words %}
      <span class="ai-word-scroller-word-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}" data-word-index="{{ forloop.index0 }}">{{ word }}</span>
    {% endfor %}
  </div>
</div>

<script>
  (function() {
    class WordScroller extends HTMLElement {
      constructor() {
        super();
        this.words = this.querySelectorAll('.ai-word-scroller-word-{{ ai_gen_id }}');
        this.currentIndex = 0;
        this.wordCount = this.words.length;
        this.interval = null;
      }

      connectedCallback() {
        this.startRotation();
      }

      disconnectedCallback() {
        this.stopRotation();
      }

      startRotation() {
        this.interval = setInterval(() => {
          // Remove active class from current word and add inactive
          this.words[this.currentIndex].classList.remove('active');
          this.words[this.currentIndex].classList.add('inactive');
          
          // Move to next word
          this.currentIndex = (this.currentIndex + 1) % this.wordCount;
          
          // Remove any inactive class and add active to new current word
          setTimeout(() => {
            this.words.forEach(word => {
              if (parseInt(word.dataset.wordIndex) !== this.currentIndex) {
                word.classList.remove('active', 'inactive');
              }
            });
            this.words[this.currentIndex].classList.remove('inactive');
            this.words[this.currentIndex].classList.add('active');
          }, 500); // Half the interval for smooth transition
          
        }, {{ block.settings.rotation_speed }}); // Rotation speed from settings
      }

      stopRotation() {
        if (this.interval) {
          clearInterval(this.interval);
        }
      }
    }

    customElements.define('word-scroller-{{ ai_gen_id }}', WordScroller);
    
    // Initialize the component
    const scrollerContainer = document.querySelector('.ai-word-scroller-{{ ai_gen_id }}');
    if (scrollerContainer) {
      new WordScroller().connectedCallback();
    }
  })();
</script>


{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-section-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: 500px;
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  .ai-hero-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-hero-background-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: {{ block.settings.image_position }};
  }

  .ai-hero-background-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f8f8f8;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-background-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 300px;
    opacity: 0.3;
  }

  .ai-hero-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 60px 40px;
    display: flex;
    align-items: center;
    min-height: 500px;
  }

  .ai-hero-text-container-{{ ai_gen_id }} {
    width: 50%;
    padding: 40px;
    background-color: {{ block.settings.text_background_color }};
    border-radius: 8px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    text-align: {{ block.settings.text_alignment }};
    {% if block.settings.text_position == 'right' %}
      margin-left: auto;
    {% elsif block.settings.text_position == 'center' %}
      margin: 0 auto;
    {% endif %}
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_font_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 20px 0;
    font-weight: 600;
    line-height: 1.2;
  }

  .ai-hero-paragraph-{{ ai_gen_id }} {
    font-size: {{ block.settings.paragraph_font_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin: 0;
    opacity: 0.9;
  }

  @media screen and (max-width: 768px) {
    .ai-hero-section-{{ ai_gen_id }} {
      min-height: 400px;
      flex-direction: column;
    }

    .ai-hero-content-{{ ai_gen_id }} {
      padding: 30px 20px;
      flex-direction: column;
      min-height: auto;
    }

    .ai-hero-text-container-{{ ai_gen_id }} {
      width: 100%;
      margin: 0;
      padding: 30px 25px;
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_font_size | times: 0.8 }}px;
      margin-bottom: 15px;
    }

    .ai-hero-paragraph-{{ ai_gen_id }} {
      font-size: {{ block.settings.paragraph_font_size | times: 0.9 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-hero-content-{{ ai_gen_id }} {
      padding: 20px 15px;
    }

    .ai-hero-text-container-{{ ai_gen_id }} {
      padding: 25px 20px;
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_font_size | times: 0.7 }}px;
    }

    .ai-hero-paragraph-{{ ai_gen_id }} {
      font-size: {{ block.settings.paragraph_font_size | times: 0.85 }}px;
    }
  }
{% endstyle %}

<section
  class="ai-hero-section-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-hero-background-{{ ai_gen_id }}">
    {% if block.settings.background_image %}
      <img
        src="{{ block.settings.background_image | image_url: width: 2000 }}"
        alt="{{ block.settings.background_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.background_image.width }}"
        height="{{ block.settings.background_image.height }}"
      >
    {% else %}
      <div class="ai-hero-background-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  <div class="ai-hero-content-{{ ai_gen_id }}">
    <div class="ai-hero-text-container-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h1 class="ai-hero-heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h1>
      {% endif %}

      {% if block.settings.paragraph != blank %}
        <div class="ai-hero-paragraph-{{ ai_gen_id }}">
          {{ block.settings.paragraph }}
        </div>
      {% endif %}
    </div>
  </div>
</section>


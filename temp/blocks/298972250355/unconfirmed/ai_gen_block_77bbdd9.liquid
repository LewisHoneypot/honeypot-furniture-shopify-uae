{% doc %}
  @prompt
    generate an empty section that can hold an app inside it with uinform top and bottom padding and centered margin left and right
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-app-container-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    margin-left: auto;
    margin-right: auto;
    padding-top: {{ block.settings.padding_top }}px;
    padding-bottom: {{ block.settings.padding_bottom }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-app-container-{{ ai_gen_id }} {
      padding-top: {{ block.settings.padding_top_mobile }}px;
      padding-bottom: {{ block.settings.padding_bottom_mobile }}px;
    }
  }
{% endstyle %}

<app-container-{{ ai_gen_id }} class="ai-app-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.app_block %}
    {{ block.settings.app_block }}
  {% else %}
    <div style="padding: 40px; text-align: center; color: #666; background-color: #f9f9f9; border: 2px dashed #ddd; border-radius: 8px;">
      <p style="margin: 0; font-size: 14px;">Add an app block to this container</p>
    </div>
  {% endif %}
</app-container-{{ ai_gen_id }}>

<script>
  (function() {
    class AppContainer{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }
    }

    customElements.define('app-container-{{ ai_gen_id }}', AppContainer{{ ai_gen_id }});
  })();
</script>

{% schema %}
{
  "name": "App container",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding (desktop)",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding (desktop)",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "Top padding (mobile)",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "Bottom padding (mobile)",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 30
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "App container"
    }
  ]
}
{% endschema %}

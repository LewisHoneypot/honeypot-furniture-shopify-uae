{% doc %}
  @prompt
    make a line of text where the end word scrolls in and out of frame

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-scrolling-text-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: {{ block.settings.text_alignment }};
    overflow: hidden;
    padding: {{ block.settings.padding }}px 0;
  }

  .ai-scrolling-text__static-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    margin-right: 8px;
  }

  .ai-scrolling-text__dynamic-{{ ai_gen_id }} {
    position: relative;
    height: {{ block.settings.font_size | plus: 4 }}px;
    overflow: hidden;
  }

  .ai-scrolling-text__words-{{ ai_gen_id }} {
    display: inline-flex;
    flex-direction: column;
    position: relative;
    color: {{ block.settings.highlight_color }};
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
  }

  .ai-scrolling-text__word-{{ ai_gen_id }} {
    opacity: 0;
    transform: translateY(100%);
    position: absolute;
    width: max-content;
  }

  .ai-scrolling-text__word-{{ ai_gen_id }}:nth-child(1) {
    animation: ai-scrolling-text-word-animation-{{ ai_gen_id }} {{ block.settings.animation_duration }}s ease-in-out 0s infinite;
  }

  .ai-scrolling-text__word-{{ ai_gen_id }}:nth-child(2) {
    animation: ai-scrolling-text-word-animation-{{ ai_gen_id }} {{ block.settings.animation_duration }}s ease-in-out {{ block.settings.animation_duration | divided_by: 4 }}s infinite;
  }

  .ai-scrolling-text__word-{{ ai_gen_id }}:nth-child(3) {
    animation: ai-scrolling-text-word-animation-{{ ai_gen_id }} {{ block.settings.animation_duration }}s ease-in-out {{ block.settings.animation_duration | divided_by: 4 | times: 2 }}s infinite;
  }

  .ai-scrolling-text__word-{{ ai_gen_id }}:nth-child(4) {
    animation: ai-scrolling-text-word-animation-{{ ai_gen_id }} {{ block.settings.animation_duration }}s ease-in-out {{ block.settings.animation_duration | divided_by: 4 | times: 3 }}s infinite;
  }

  @keyframes ai-scrolling-text-word-animation-{{ ai_gen_id }} {
    0%, 20%, 80%, 100% {
      opacity: 0;
      transform: translateY(100%);
    }
    25%, 55% {
      opacity: 1;
      transform: translateY(0);
    }
    60%, 75% {
      opacity: 0;
      transform: translateY(-100%);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-scrolling-text__static-{{ ai_gen_id }},
    .ai-scrolling-text__words-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size_mobile }}px;
    }
    
    .ai-scrolling-text__dynamic-{{ ai_gen_id }} {
      height: {{ block.settings.font_size_mobile | plus: 4 }}px;
    }
  }
{% endstyle %}

<div class="ai-scrolling-text-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-scrolling-text__static-{{ ai_gen_id }}">{{ block.settings.static_text }}</div>
  <div class="ai-scrolling-text__dynamic-{{ ai_gen_id }}">
    <div class="ai-scrolling-text__words-{{ ai_gen_id }}">
      {% assign words = block.settings.scrolling_words | split: ',' %}
      {% for word in words limit: 4 %}
        <div class="ai-scrolling-text__word-{{ ai_gen_id }}">{{ word | strip }}</div>
      {% endfor %}
    </div>
  </div>
</div>


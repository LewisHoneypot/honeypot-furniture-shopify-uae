{% doc %}
  @prompt
    Make a line of text where the last word scrolls up into line then up out of line with 3 different words, animate the last word scrolling up out of line too


{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-text-scroller-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: {{ block.settings.text_alignment }};
    padding: {{ block.settings.padding }}px;
    margin: {{ block.settings.margin }}px 0;
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    color: {{ block.settings.text_color }};
    line-height: 1.2;
    overflow: hidden;
  }

  .ai-text-scroller-static-{{ ai_gen_id }} {
    margin-right: 10px;
  }

  .ai-text-scroller-dynamic-{{ ai_gen_id }} {
    position: relative;
    height: {{ block.settings.font_size | plus: 5 }}px;
    overflow: hidden;
    color: {{ block.settings.highlight_color }};
  }

  .ai-text-scroller-words-{{ ai_gen_id }} {
    display: inline-flex;
    flex-direction: column;
    position: relative;
  }

  .ai-text-scroller-word-{{ ai_gen_id }} {
    opacity: 0;
    transform: translateY(100%);
    position: absolute;
    left: 0;
    right: 0;
    text-align: center;
  }

  .ai-text-scroller-word-{{ ai_gen_id }}.active {
    position: relative;
    opacity: 1;
    transform: translateY(0);
    transition: opacity 0.3s ease, transform 0.5s ease;
  }

  .ai-text-scroller-word-{{ ai_gen_id }}.exit {
    opacity: 0;
    transform: translateY(-100%);
    transition: opacity 0.3s ease, transform 0.5s ease;
  }

  @media screen and (max-width: 749px) {
    .ai-text-scroller-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size_mobile }}px;
    }
    
    .ai-text-scroller-dynamic-{{ ai_gen_id }} {
      height: {{ block.settings.font_size_mobile | plus: 5 }}px;
    }
  }
{% endstyle %}

<text-scroller-{{ ai_gen_id }} 
  class="ai-text-scroller-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
><div class="ai-text-scroller-static-{{ ai_gen_id }}">{{ block.settings.static_text }}</div>
  <div class="ai-text-scroller-dynamic-{{ ai_gen_id }}">
    <div class="ai-text-scroller-words-{{ ai_gen_id }}">
      <div class="ai-text-scroller-word-{{ ai_gen_id }} active">{{ block.settings.word_1 }}</div>
      <div class="ai-text-scroller-word-{{ ai_gen_id }}">{{ block.settings.word_2 }}</div>
      <div class="ai-text-scroller-word-{{ ai_gen_id }}">{{ block.settings.word_3 }}</div>
    </div>
  </div>
</text-scroller-{{ ai_gen_id }}>

<script>
  (function() {
    class TextScroller extends HTMLElement {
      constructor() {
        super();
        this.words = this.querySelectorAll('.ai-text-scroller-word-{{ ai_gen_id }}');
        this.currentIndex = 0;
        this.interval = {{ block.settings.rotation_speed }} * 1000;
      }

      connectedCallback() {
        this.timer = setInterval(() => this.rotateWords(), this.interval);
      }

      disconnectedCallback() {
        if (this.timer) {
          clearInterval(this.timer);
        }
      }

      rotateWords() {
        // Add exit class to current word
        const currentWord = this.words[this.currentIndex];
        currentWord.classList.add('exit');
        currentWord.classList.remove('active');
        
        // Update index to next word
        this.currentIndex = (this.currentIndex + 1) % this.words.length;
        
        // After exit animation completes, prepare next word
        setTimeout(() => {
          // Reset position of next word below the visible area
          const nextWord = this.words[this.currentIndex];
          nextWord.style.transform = 'translateY(100%)';
          nextWord.style.opacity = '0';
          nextWord.style.transition = 'none';
          
          // Force reflow to ensure the style changes take effect
          void nextWord.offsetWidth;
          
          // Add active class to next word with transition
          nextWord.style.transition = 'opacity 0.3s ease, transform 0.5s ease';
          nextWord.classList.add('active');
          
          // Reset other words
          this.words.forEach((word, index) => {
            if (index !== this.currentIndex) {
              word.classList.remove('active', 'exit');
              word.style.transition = 'none';
              word.style.transform = 'translateY(100%)';
              word.style.opacity = '0';
            }
          });
        }, 500); // Match the exit transition duration
      }
    }

    customElements.define('text-scroller-{{ ai_gen_id }}', TextScroller);
  })();
</script>


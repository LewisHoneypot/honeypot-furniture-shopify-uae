{% doc %}
  @prompt
    Make a line of text where the last word scrolls up into line then up out of line with 3 different words, animate the last word scrolling up out of line too
, slide the word up into frame, hold it for 1 second then slide it up out of frame


{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-text-scroller-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: {{ block.settings.text_alignment }};
    padding: {{ block.settings.padding }}px;
    margin: {{ block.settings.margin }}px 0;
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    color: {{ block.settings.text_color }};
    line-height: 1.2;
    overflow: hidden;
  }

  .ai-text-scroller-static-{{ ai_gen_id }} {
    margin-right: 10px;
  }

  .ai-text-scroller-dynamic-{{ ai_gen_id }} {
    position: relative;
    height: {{ block.settings.font_size | plus: 5 }}px;
    overflow: hidden;
    color: {{ block.settings.highlight_color }};
  }

  .ai-text-scroller-words-{{ ai_gen_id }} {
    display: inline-flex;
    flex-direction: column;
    position: relative;
  }

  .ai-text-scroller-word-{{ ai_gen_id }} {
    position: absolute;
    left: 0;
    right: 0;
    text-align: center;
    transform: translateY(100%);
    opacity: 0;
    transition: transform 0.5s ease, opacity 0.3s ease;
  }

  .ai-text-scroller-word-{{ ai_gen_id }}.entering {
    transform: translateY(0);
    opacity: 1;
  }

  .ai-text-scroller-word-{{ ai_gen_id }}.exiting {
    transform: translateY(-100%);
    opacity: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-text-scroller-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size_mobile }}px;
    }
    
    .ai-text-scroller-dynamic-{{ ai_gen_id }} {
      height: {{ block.settings.font_size_mobile | plus: 5 }}px;
    }
  }
{% endstyle %}

<text-scroller-{{ ai_gen_id }} 
  class="ai-text-scroller-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-text-scroller-static-{{ ai_gen_id }}">{{ block.settings.static_text }}</div>
  <div class="ai-text-scroller-dynamic-{{ ai_gen_id }}">
    <div class="ai-text-scroller-words-{{ ai_gen_id }}">
      <div class="ai-text-scroller-word-{{ ai_gen_id }}">{{ block.settings.word_1 }}</div>
      <div class="ai-text-scroller-word-{{ ai_gen_id }}">{{ block.settings.word_2 }}</div>
      <div class="ai-text-scroller-word-{{ ai_gen_id }}">{{ block.settings.word_3 }}</div>
    </div>
  </div>
</text-scroller-{{ ai_gen_id }}>

<script>
  (function() {
    class TextScroller extends HTMLElement {
      constructor() {
        super();
        this.words = this.querySelectorAll('.ai-text-scroller-word-{{ ai_gen_id }}');
        this.currentIndex = 0;
        this.animationDuration = 500; // 0.5s for slide in/out animation
        this.visibleDuration = 1000; // 1s visible time
        this.totalCycleDuration = this.animationDuration * 2 + this.visibleDuration;
      }

      connectedCallback() {
        // Start animation cycle
        this.startAnimation();
      }

      disconnectedCallback() {
        if (this.animationTimer) {
          clearTimeout(this.animationTimer);
        }
      }

      startAnimation() {
        // Start with the first word
        this.animateWord(0);}

      animateWord(index) {
        const word = this.words[index];
        
        // Slide in
        word.classList.add('entering');
        // Schedule slide out after visible duration
        setTimeout(() => {
          word.classList.remove('entering');
          word.classList.add('exiting');
          // Schedule next word after this one exits
          setTimeout(() => {
            word.classList.remove('exiting');
            
            // Move to next word
            const nextIndex = (index + 1) % this.words.length;
            this.animateWord(nextIndex);
          }, this.animationDuration);
        }, this.animationDuration + this.visibleDuration);
      }
    }

    customElements.define('text-scroller-{{ ai_gen_id }}', TextScroller);
  })();
</script>


{% doc %}
  @prompt
    Text with the final word animated showing 3 different words rotating

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
.ai-rotating-text-container-{{ ai_gen_id }} {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: {{ block.settings.text_alignment }};
  padding: {{ block.settings.padding }}px;
}

.ai-rotating-text-prefix-{{ ai_gen_id }} {
  color: {{ block.settings.text_color }};
  font-size: {{ block.settings.font_size }}px;
  font-weight: {{ block.settings.font_weight }};
  margin-right: 8px;
}

.ai-rotating-text-wrapper-{{ ai_gen_id }} {
  position: relative;
  height: {{ block.settings.font_size | plus: 10 }}px;
  overflow: hidden;
}

.ai-rotating-text-{{ ai_gen_id }} {
  color: {{ block.settings.highlight_color }};
  font-size: {{ block.settings.font_size }}px;
  font-weight: {{ block.settings.font_weight }};
  position: absolute;
  opacity: 0;
  top: 0;
  left: 0;
  animation: ai-rotate-{{ ai_gen_id }} {{ block.settings.rotation_speed }}s ease-in-out infinite;
}

.ai-rotating-text-{{ ai_gen_id }}:nth-child(1) {
  animation-delay: 0s;
}

.ai-rotating-text-{{ ai_gen_id }}:nth-child(2) {
  animation-delay: calc({{ block.settings.rotation_speed }}s / 3);
}

.ai-rotating-text-{{ ai_gen_id }}:nth-child(3) {
  animation-delay: calc(({{ block.settings.rotation_speed }}s / 3) * 2);
}

@keyframes ai-rotate-{{ ai_gen_id }} {
  0%, 10% {
    opacity: 0;
    transform: translateY(50%);
  }
  15%, 30% {
    opacity: 1;
    transform: translateY(0);
  }
  35%, 100% {
    opacity: 0;
    transform: translateY(-50%);
  }
}

@media screen and (max-width: 749px) {
  .ai-rotating-text-prefix-{{ ai_gen_id }},
  .ai-rotating-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.font_size_mobile }}px;
  }
  
  .ai-rotating-text-wrapper-{{ ai_gen_id }} {
    height: {{ block.settings.font_size_mobile | plus: 10 }}px;
  }
}
{% endstyle %}

<div class="ai-rotating-text-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-rotating-text-prefix-{{ ai_gen_id }}">{{ block.settings.prefix_text }}</div>
  <div class="ai-rotating-text-wrapper-{{ ai_gen_id }}">
    <div class="ai-rotating-text-{{ ai_gen_id }}">{{ block.settings.rotating_text_1 }}</div>
    <div class="ai-rotating-text-{{ ai_gen_id }}">{{ block.settings.rotating_text_2 }}</div>
    <div class="ai-rotating-text-{{ ai_gen_id }}">{{ block.settings.rotating_text_3 }}</div>
  </div>
</div>


{% doc %}
  @prompt
    Create a WhatsApp chat button block styled with the following specifications:
    Button Text: “START CHAT” (editable by merchant)
    Icon: WhatsApp logo icon on the right side of the text
    Button Style:
    Bright green background (#25D366 or similar)
    Rounded corners (pill or 12px+ border-radius)
    White text and icon
    Subtle drop shadow for depth
    On Click: Open a new WhatsApp chat window to a configurable number using the standard https://wa.me/ format
    Merchant Controls:
    
    Editable:
    Button label text
    WhatsApp phone number (including country code)
    Button colour
    Optional: Button width and corner radius
    Ensure responsive design with centred alignment on all screen sizes, Add a title and sub title above the button
    

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-whatsapp-container-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: 20px 0;
    text-align: center;}
  
  .ai-whatsapp-heading-{{ ai_gen_id }} {
    margin: 0 0 10px 0;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.text_color }};
    font-weight:600;
  }
  
  .ai-whatsapp-subheading-{{ ai_gen_id }} {
    margin: 0 0 20px 0;
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.85;
    max-width: 600px;
  }
  .ai-whatsapp-button-container-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    width: 100%;}
  
  .ai-whatsapp-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    background-color: {{ block.settings.button_color }};
    color: #ffffff;
    font-weight: 600;
    padding: 12px 24px;
    border-radius: {{ block.settings.border_radius }}px;
    text-decoration: none;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
    width: {{ block.settings.button_width }}px;
    max-width: 100%;
  }
  
  .ai-whatsapp-button-{{ ai_gen_id }}:hover {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    transform: translateY(-2px);
  }
  
  .ai-whatsapp-icon-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;}
  
  .ai-whatsapp-icon-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;fill: #ffffff;
  }
  
  @media screen and (max-width: 749px) {
    .ai-whatsapp-button-{{ ai_gen_id }} {
      width: 100%;max-width: {{ block.settings.button_width }}px;
    }
    
    .ai-whatsapp-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
    
    .ai-whatsapp-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-whatsapp-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}<h2 class="ai-whatsapp-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
  {% endif %}
  
  {% if block.settings.subheading != blank %}
    <div class="ai-whatsapp-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
  {% endif %}
  
  <div class="ai-whatsapp-button-container-{{ ai_gen_id }}">
    <a 
      href="https://wa.me/{{ block.settings.phone_number | remove: ' ' | remove: '-' | remove: '(' | remove: ')' }}" 
      target="_blank" 
      rel="noopener" 
      class="ai-whatsapp-button-{{ ai_gen_id }}"
      aria-label="Chat on WhatsApp"
    >
      <span>{{ block.settings.button_text }}</span>
      <span class="ai-whatsapp-icon-{{ ai_gen_id }}">
        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">

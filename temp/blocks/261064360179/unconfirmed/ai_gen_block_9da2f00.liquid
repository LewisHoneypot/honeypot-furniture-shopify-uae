  "name": "WhatsApp Chat Button",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Text Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Need Help? Contact Us"
    },
    {

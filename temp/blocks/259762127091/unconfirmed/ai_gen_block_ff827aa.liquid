{% doc %}
  @prompt
    An image gallery carousel  displayed at full screen width, Add a Product card which shows product image and price as an overlay
, Make the overlay display in the bottom right of the image and only take up a fifth of the image width 


{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-card-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.card_border_radius }}px;
    background-color: {{ block.settings.card_background_color }};
  }

  .ai-product-card__link-{{ ai_gen_id }} {
    display: block;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }

  .ai-product-card__image-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom: {{ block.settings.image_aspect_ratio }}%;
    overflow: hidden;
  }

  .ai-product-card__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.image_fit }};
    transition: transform {{ block.settings.hover_effect_duration }}ms ease;
  }

  {% if block.settings.enable_hover_effect %}
    .ai-product-card__link-{{ ai_gen_id }}:hover .ai-product-card__image-{{ ai_gen_id }} {
      transform: scale(1.05);
    }
  {% endif %}

  .ai-product-card__placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-product-card__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-product-card__overlay-{{ ai_gen_id }} {
    position: absolute;
    bottom: {{ block.settings.overlay_margin }}px;
    right: {{ block.settings.overlay_margin }}px;
    width: 20%;
    min-width: 120px;
    padding: {{ block.settings.overlay_padding }}px;
    background-color: {{ block.settings.overlay_background_color }};
    color: {{ block.settings.overlay_text_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    transition: opacity {{ block.settings.hover_effect_duration }}ms ease;
    border-radius: {{ block.settings.overlay_border_radius }}px;
  }

  {% if block.settings.show_overlay_on_hover %}
    .ai-product-card__overlay-{{ ai_gen_id }} {
      opacity: 0;
    }
    
    .ai-product-card__link-{{ ai_gen_id }}:hover .ai-product-card__overlay-{{ ai_gen_id }} {
      opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    }
  {% endif %}

  .ai-product-card__title-{{ ai_gen_id }} {
    margin: 0 0 8px;
    font-size: {{ block.settings.title_font_size }}px;
    font-weight: {{ block.settings.title_font_weight }};
    line-height: 1.2;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    {% if block.settings.title_text_transform == 'uppercase' %}
      text-transform: uppercase;
    {% elsif block.settings.title_text_transform == 'lowercase' %}
      text-transform: lowercase;
    {% elsif block.settings.title_text_transform == 'capitalize' %}
      text-transform: capitalize;
    {% endif %}
  }

  .ai-product-card__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_font_size }}px;
    font-weight: {{ block.settings.price_font_weight }};
  }

  .ai-product-card__price-{{ ai_gen_id }} .price--sale {
    color: {{ block.settings.sale_price_color }};
  }

  .ai-product-card__price-{{ ai_gen_id }} .price--regular {
    color: {{ block.settings.regular_price_color }};
    {% if block.settings.show_strike_through_price %}
      text-decoration: line-through;
      opacity: 0.7;
    {% endif %}
  }

  .ai-product-card__vendor-{{ ai_gen_id }} {
    font-size: {{ block.settings.vendor_font_size }}px;
    margin-bottom: 4px;
    opacity: 0.8;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .ai-product-card__badge-{{ ai_gen_id }} {
    position: absolute;
    top: {{ block.settings.badge_position_top }}px;
    {% if block.settings.badge_position == 'left' %}
      left: {{ block.settings.badge_position_side }}px;
    {% else %}
      right: {{ block.settings.badge_position_side }}px;
    {% endif %}
    padding: 4px 8px;
    font-size: 12px;
    font-weight: 600;
    border-radius: 4px;
    z-index: 1;
  }

  .ai-product-card__badge-{{ ai_gen_id }}--sale {
    background-color: {{ block.settings.sale_badge_background_color }};
    color: {{ block.settings.sale_badge_text_color }};
  }

  .ai-product-card__badge-{{ ai_gen_id }}--sold-out {
    background-color: {{ block.settings.sold_out_badge_background_color }};
    color: {{ block.settings.sold_out_badge_text_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-product-card__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_font_size | times: 0.85 }}px;
    }
    
    .ai-product-card__price-{{ ai_gen_id }} {
      font-size: {{ block.settings.price_font_size | times: 0.85 }}px;
    }
    
    .ai-product-card__vendor-{{ ai_gen_id }} {
      font-size: {{ block.settings.vendor_font_size | times: 0.85 }}px;
    }
    
    .ai-product-card__overlay-{{ ai_gen_id }} {
      min-width: 100px;
      padding: {{ block.settings.overlay_padding | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-product-card-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.product %}
    <a href="{{ block.settings.product.url }}" class="ai-product-card__link-{{ ai_gen_id }}">
      <div class="ai-product-card__image-container-{{ ai_gen_id }}">
        {% if block.settings.product.featured_image %}
          <img
            src="{{ block.settings.product.featured_image | image_url: width: 600 }}"
            alt="{{ block.settings.product.featured_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.product.featured_image.width }}"
            height="{{ block.settings.product.featured_image.height }}"
            class="ai-product-card__image-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="ai-product-card__placeholder-{{ ai_gen_id }}">
            {{ 'product-1' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>

      {% if block.settings.show_badges %}
        {% if block.settings.product.available == false and block.settings.show_sold_out_badge %}
          <div class="ai-product-card__badge-{{ ai_gen_id }} ai-product-card__badge-{{ ai_gen_id }}--sold-out">
            {{ block.settings.sold_out_badge_text }}
          </div>
        {% elsif block.settings.product.compare_at_price > block.settings.product.price and block.settings.show_sale_badge %}
          <div class="ai-product-card__badge-{{ ai_gen_id }} ai-product-card__badge-{{ ai_gen_id }}--sale">
            {{ block.settings.sale_badge_text }}
          </div>
        {% endif %}
      {% endif %}

      <div class="ai-product-card__overlay-{{ ai_gen_id }}">
        {% if block.settings.show_vendor and block.settings.product.vendor %}
          <div class="ai-product-card__vendor-{{ ai_gen_id }}">{{ block.settings.product.vendor }}</div>
        {% endif %}
        
        {% if block.settings.show_title %}
          <h3 class="ai-product-card__title-{{ ai_gen_id }}">{{ block.settings.product.title }}</h3>
        {% endif %}
        
        {% if block.settings.show_price %}
          <div class="ai-product-card__price-{{ ai_gen_id }}">
            {% if block.settings.product.compare_at_price > block.settings.product.price %}
              <span class="price--sale">{{ block.settings.product.price | money }}</span>
              {% if block.settings.show_compare_at_price %}
                <span class="price--regular">{{ block.settings.product.compare_at_price | money }}</span>
              {% endif %}
            {% else %}
              <span>{{ block.settings.product.price | money }}</span>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </a>
  {% else %}
    <div class="ai-product-card__image-container-{{ ai_gen_id }}">
      <div class="ai-product-card__placeholder-{{ ai_gen_id }}">
        {{ 'product-1' | placeholder_svg_tag }}
      </div>
      
      <div class="ai-product-card__overlay-{{ ai_gen_id }}">
        {% if block.settings.show_vendor %}
          <div class="ai-product-card__vendor-{{ ai_gen_id }}">Sample vendor</div>
        {% endif %}
        
        {% if block.settings.show_title %}
          <h3 class="ai-product-card__title-{{ ai_gen_id }}">Sample product</h3>
        {% endif %}
        
        {% if block.settings.show_price %}
          <div class="ai-product-card__price-{{ ai_gen_id }}">
            <span>$19.99</span>
          </div>
        {% endif %}
      </div>
    </div>
  {% endif %}
</div>


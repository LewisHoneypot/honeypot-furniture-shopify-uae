{% doc %}
  @prompt
    An image gallery carousel  displayed at full screen width

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-gallery-carousel-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-gallery-carousel__track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease-in-out;
  }

  .ai-gallery-carousel__slide-{{ ai_gen_id }} {
    flex: 0 0 100%;
    min-width: 100%;
    position: relative;
    height: {{ block.settings.carousel_height }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-gallery-carousel__slide-{{ ai_gen_id }} {
      height: {{ block.settings.carousel_height_mobile }}px;
    }
  }

  .ai-gallery-carousel__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.image_fit }};
  }

  .ai-gallery-carousel__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-gallery-carousel__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-gallery-carousel__nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    background-color: {{ block.settings.nav_background_color }};
    border: none;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 2;
    opacity: {{ block.settings.nav_opacity | divided_by: 100.0 }};
    transition: opacity 0.3s ease;
  }

  .ai-gallery-carousel__nav-{{ ai_gen_id }}:hover {
    opacity: 1;
  }

  .ai-gallery-carousel__nav-{{ ai_gen_id }}--prev {
    left: 20px;
  }

  .ai-gallery-carousel__nav-{{ ai_gen_id }}--next {
    right: 20px;
  }

  .ai-gallery-carousel__nav-icon-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    fill: {{ block.settings.nav_icon_color }};
  }

  .ai-gallery-carousel__dots-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 8px;
    z-index: 2;
  }

  .ai-gallery-carousel__dot-{{ ai_gen_id }} {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    opacity: 0.5;
    cursor: pointer;
    transition: opacity 0.3s ease;
  }

  .ai-gallery-carousel__dot-{{ ai_gen_id }}.active {
    opacity: 1;
  }

  .ai-gallery-carousel__caption-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: {{ block.settings.caption_background_color }};
    color: {{ block.settings.caption_text_color }};
    padding: 15px;
    opacity: {{ block.settings.caption_opacity | divided_by: 100.0 }};
    transform: translateY({% if block.settings.always_show_caption %}0{% else %}100%{% endif %});
    transition: transform 0.3s ease;
  }

  {% if block.settings.show_caption_on_hover %}
    .ai-gallery-carousel__slide-{{ ai_gen_id }}:hover .ai-gallery-carousel__caption-{{ ai_gen_id }} {
      transform: translateY(0);
    }
  {% endif %}
{% endstyle %}

<gallery-carousel-{{ ai_gen_id }} 
  class="ai-gallery-carousel-{{ ai_gen_id }}" 
  data-autoplay="{{ block.settings.autoplay }}"
  data-autoplay-speed="{{ block.settings.autoplay_speed | times: 1000 }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-gallery-carousel__track-{{ ai_gen_id }}">
    {% for i in (1..5) %}
      {% assign image_setting = 'image_' | append: i %}
      {% assign caption_setting = 'caption_' | append: i %}
      {% assign image = block.settings[image_setting] %}
      {% assign caption = block.settings[caption_setting] %}
      
      {% if image or forloop.index == 1 %}
        <div class="ai-gallery-carousel__slide-{{ ai_gen_id }}" data-index="{{ forloop.index0 }}">
          {% if image %}
            <img 
              src="{{ image | image_url: width: 2000 }}"
              alt="{{ image.alt | escape }}"
              loading="{% if forloop.index == 1 %}eager{% else %}lazy{% endif %}"
              class="ai-gallery-carousel__image-{{ ai_gen_id }}"
              width="{{ image.width }}"
              height="{{ image.height }}"
            >
          {% else %}
            <div class="ai-gallery-carousel__placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
          
          {% if caption != blank %}
            <div class="ai-gallery-carousel__caption-{{ ai_gen_id }}">
              {{ caption }}
            </div>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
  
  {% if block.settings.show_navigation %}
    <button class="ai-gallery-carousel__nav-{{ ai_gen_id }} ai-gallery-carousel__nav-{{ ai_gen_id }}--prev" aria-label="Previous slide">
      <svg class="ai-gallery-carousel__nav-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/>
      </svg>
    </button>
    <button class="ai-gallery-carousel__nav-{{ ai_gen_id }} ai-gallery-carousel__nav-{{ ai_gen_id }}--next" aria-label="Next slide">
      <svg class="ai-gallery-carousel__nav-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/>
      </svg>
    </button>
  {% endif %}
  
  {% if block.settings.show_dots %}
    <div class="ai-gallery-carousel__dots-{{ ai_gen_id }}"></div>
  {% endif %}
</gallery-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class GalleryCarousel extends HTMLElement {
      constructor() {
        super();
        this.track = this.querySelector('.ai-gallery-carousel__track-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.ai-gallery-carousel__slide-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-gallery-carousel__nav-{{ ai_gen_id }}--prev');
        this.nextButton = this.querySelector('.ai-gallery-carousel__nav-{{ ai_gen_id }}--next');
        this.dotsContainer = this.querySelector('.ai-gallery-carousel__dots-{{ ai_gen_id }}');
        this.currentIndex = 0;
        this.slideCount = this.slides.length;
        this.autoplay = this.dataset.autoplay === 'true';
        this.autoplaySpeed = parseInt(this.dataset.autoplaySpeed) || 5000;
        this.autoplayInterval = null;
      }

      connectedCallback() {
        if (this.slideCount <= 1) return;
        
        this.setupDots();
        this.setupEventListeners();
        this.goToSlide(0);
        
        if (this.autoplay) {
          this.startAutoplay();
        }
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }

      setupDots() {
        if (!this.dotsContainer) return;
        
        for (let i = 0; i < this.slideCount; i++) {
          const dot = document.createElement('div');
          dot.classList.add('ai-gallery-carousel__dot-{{ ai_gen_id }}');
          dot.dataset.index = i;
          this.dotsContainer.appendChild(dot);
        }
        
        this.dots = this.dotsContainer.querySelectorAll('.ai-gallery-carousel__dot-{{ ai_gen_id }}');
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.prev());
        }
        
        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.next());
        }
        
        if (this.dots) {
          this.dots.forEach(dot => {
            dot.addEventListener('click', () => {
              const index = parseInt(dot.dataset.index);
              this.goToSlide(index);
            });
          });
        }
        
        this.addEventListener('mouseenter', () => this.stopAutoplay());
        this.addEventListener('mouseleave', () => {
          if (this.autoplay) {
            this.startAutoplay();
          }
        });
      }

      prev() {
        let index = this.currentIndex - 1;
        if (index < 0) {
          index = this.slideCount - 1;
        }
        this.goToSlide(index);
      }

      next() {
        let index = this.currentIndex + 1;
        if (index >= this.slideCount) {
          index = 0;
        }
        this.goToSlide(index);
      }

      goToSlide(index) {
        if (index < 0 || index >= this.slideCount) return;
        
        this.currentIndex = index;
        this.track.style.transform = `translateX(-${index * 100}%)`;
        
        if (this.dots) {
          this.dots.forEach((dot, i) => {
            if (i === index) {
              dot.classList.add('active');
            } else {
              dot.classList.remove('active');
            }
          });
        }
      }

      startAutoplay() {
        this.stopAutoplay();
        this.autoplayInterval = setInterval(() => {
          this.next();
        }, this.autoplaySpeed);
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }
    }

    customElements.define('gallery-carousel-{{ ai_gen_id }}', GalleryCarousel);
  })();
</script>


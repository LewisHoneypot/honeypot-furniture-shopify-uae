{% doc %}
  @prompt
    I need some animated text where the last word in the line is animated as a scroller and alternates between 3 different words, Remove the fade in effect 
, make it so each word slides up into line. waits 2 seconds then slides up out of line


{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-animated-text-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: {{ block.settings.text_alignment }};
    gap: 0.4em;
    margin-bottom: {{ block.settings.margin_bottom }}px;
  }

  .ai-animated-text-{{ ai_gen_id }} .ai-static-text {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    line-height: 1.2;
  }

  .ai-animated-text-{{ ai_gen_id }} .ai-word-animation {
    position: relative;
    display: inline-block;
    height: 1.2em;
    overflow: hidden;
    color: {{ block.settings.highlight_color }};
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
  }

  .ai-animated-text-{{ ai_gen_id }} .ai-word-animation-container {
    position: relative;
  }

  .ai-animated-text-{{ ai_gen_id }} .ai-animated-word {
    display: block;
    height: 1.2em;
    line-height: 1.2;
    position: absolute;
    width: 100%;
    top: 0;
    left: 0;
    transform: translateY(100%);
    opacity: 0;
    transition: transform 0.5s ease, opacity 0.2s ease;
  }

  .ai-animated-text-{{ ai_gen_id }} .ai-animated-word.active {
    transform: translateY(0);
    opacity: 1;
  }

  .ai-animated-text-{{ ai_gen_id }} .ai-animated-word.exit {
    transform: translateY(-100%);
    opacity: 0;
    transition: transform 0.5s ease, opacity 0.2s ease 0.3s;
  }

  @media screen and (max-width: 749px) {
    .ai-animated-text-{{ ai_gen_id }} .ai-static-text,
    .ai-animated-text-{{ ai_gen_id }} .ai-word-animation {
      font-size: {{ block.settings.font_size_mobile }}px;
    }
  }
{% endstyle %}

<animated-text-{{ ai_gen_id }} 
  class="ai-animated-text-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <span class="ai-static-text">{{ block.settings.static_text }}</span>
  <span class="ai-word-animation">
    <span class="ai-word-animation-container">
      <span class="ai-animated-word" data-word="1">{{ block.settings.animated_word_1 }}</span>
      <span class="ai-animated-word" data-word="2">{{ block.settings.animated_word_2 }}</span>
      <span class="ai-animated-word" data-word="3">{{ block.settings.animated_word_3 }}</span>
    </span>
  </span>
</animated-text-{{ ai_gen_id }}>

<script>
  (function() {
    class AnimatedText extends HTMLElement {
      constructor() {
        super();
        this.words = this.querySelectorAll('.ai-animated-word');
        this.currentIndex = 0;
        this.displayTime = 2000; // Time each word stays visible (2 seconds)
        this.transitionTime = 500; // Time for transition animation (0.5 seconds)
      }

      connectedCallback() {
        // Set initial state - measure the widest word to set container width
        let maxWidth = 0;
        this.words.forEach(word => {
          word.style.position = 'static';
          word.style.opacity = '1';
          const width = word.offsetWidth;
          if (width > maxWidth) maxWidth = width;
          word.style.position = '';
          word.style.opacity = '';
        });
        
        // Set container width to fit the widest word
        const container = this.querySelector('.ai-word-animation');
        container.style.width = `${maxWidth}px`;
        
        // Start with first word
        this.words[this.currentIndex].classList.add('active');
        
        // Start animation cycle
        this.startNextCycle();
      }

      disconnectedCallback() {
        clearTimeout(this.animationTimer);
      }

      startNextCycle() {
        // Schedule exit animation after display time
        this.animationTimer = setTimeout(() => {
          // Start exit animation
          this.words[this.currentIndex].classList.add('exit');
          
          // After exit animation completes, move to next word
          setTimeout(() => {
            this.words[this.currentIndex].classList.remove('active', 'exit');
            this.currentIndex = (this.currentIndex + 1) % this.words.length;
            this.words[this.currentIndex].classList.add('active');
            
            // Start next cycle
            this.startNextCycle();
          }, this.transitionTime);
        }, this.displayTime);
      }
    }

    customElements.define('animated-text-{{ ai_gen_id }}', AnimatedText);
  })();
</script>


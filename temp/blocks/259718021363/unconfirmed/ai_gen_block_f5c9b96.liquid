{% doc %}
  @prompt
    I need some animated text where the last word in the line is animated as a scroller and alternates between 3 different words, Remove the fade in effect 


{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-animated-text-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: {{ block.settings.text_alignment }};
    gap: 0.4em;
    margin-bottom: {{ block.settings.margin_bottom }}px;
  }

  .ai-animated-text-{{ ai_gen_id }} .ai-static-text {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    line-height: 1.2;
  }

  .ai-animated-text-{{ ai_gen_id }} .ai-word-animation {
    position: relative;
    display: inline-block;
    height: 1.2em;
    overflow: hidden;
    color: {{ block.settings.highlight_color }};
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
  }

  .ai-animated-text-{{ ai_gen_id }} .ai-word-animation-container {
    position: relative;
    transition: transform 0.5s ease;
  }

  .ai-animated-text-{{ ai_gen_id }} .ai-animated-word {
    display: block;
    height: 1.2em;
    line-height: 1.2;
    transform: translateY(100%);
    visibility: hidden;
  }

  .ai-animated-text-{{ ai_gen_id }} .ai-animated-word.active {
    visibility: visible;
    transform: translateY(0);
    transition: transform 0.5s ease;
  }

  .ai-animated-text-{{ ai_gen_id }} .ai-animated-word.previous {
    visibility: hidden;
    transform: translateY(-100%);
    transition: transform 0.5s ease;
  }

  @media screen and (max-width: 749px) {
    .ai-animated-text-{{ ai_gen_id }} .ai-static-text,
    .ai-animated-text-{{ ai_gen_id }} .ai-word-animation {
      font-size: {{ block.settings.font_size_mobile }}px;
    }
  }
{% endstyle %}

<animated-text-{{ ai_gen_id }} 
  class="ai-animated-text-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <span class="ai-static-text">{{ block.settings.static_text }}</span>
  <span class="ai-word-animation">
    <span class="ai-word-animation-container"><span class="ai-animated-word" data-word="1">{{ block.settings.animated_word_1 }}</span>
      <span class="ai-animated-word" data-word="2">{{ block.settings.animated_word_2 }}</span>
      <span class="ai-animated-word" data-word="3">{{ block.settings.animated_word_3 }}</span>
    </span>
  </span>
</animated-text-{{ ai_gen_id }}>

<script>
  (function() {
    class AnimatedText extends HTMLElement {
      constructor() {
        super();
        this.words = this.querySelectorAll('.ai-animated-word');
        this.currentIndex = 0;
        this.interval = {{ block.settings.animation_speed }};
      }

      connectedCallback() {
        // Set initial state
        this.words[this.currentIndex].classList.add('active');
        // Start animation
        this.animationTimer = setInterval(() => {
          this.animateWords();
        }, this.interval);
      }

      disconnectedCallback() {
        clearInterval(this.animationTimer);
      }

      animateWords() {
        // Remove previous class from all words
        this.words.forEach(word => {
          word.classList.remove('previous');
        });

        // Add previous class to current word
        this.words[this.currentIndex].classList.add('previous');
        this.words[this.currentIndex].classList.remove('active');

        // Update index
        this.currentIndex = (this.currentIndex + 1) % this.words.length;

        // Add active class to new current word
        this.words[this.currentIndex].classList.add('active');
      }
    }

    customElements.define('animated-text-{{ ai_gen_id }}', AnimatedText);
  })();
</script>


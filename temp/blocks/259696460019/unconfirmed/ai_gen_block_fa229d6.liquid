{% doc %}
  @prompt
    I need to split the section into two columns

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .two-column-block-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: {{ block.settings.gap }}px;
    align-items: {{ block.settings.vertical_alignment }};
  }

  .two-column-block-{{ ai_gen_id }} .column {
    flex: 1;
    min-width: 250px;
  }

  .two-column-block-{{ ai_gen_id }} .column-content {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: {{ block.settings.content_vertical_alignment }};
  }

  .two-column-block-{{ ai_gen_id }} .column-image-container {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .two-column-block-{{ ai_gen_id }} .column-image {
    width: 100%;
    height: auto;
    display: block;
  }

  .two-column-block-{{ ai_gen_id }} .column-placeholder {
    width: 100%;
    aspect-ratio: 16/9;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .two-column-block-{{ ai_gen_id }} .column-placeholder svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .two-column-block-{{ ai_gen_id }} .column-heading {
    margin-top: 0;
    margin-bottom: 15px;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
  }

  .two-column-block-{{ ai_gen_id }} .column-text {
    margin-bottom: 20px;
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
  }

  .two-column-block-{{ ai_gen_id }} .column-button {
    display: inline-block;
    padding: 10px 20px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    transition: background-color 0.3s;
    text-align: center;
    max-width: fit-content;
  }

  .two-column-block-{{ ai_gen_id }} .column-button:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  @media screen and (max-width: 749px) {
    .two-column-block-{{ ai_gen_id }} {
      flex-direction: {% if block.settings.reverse_on_mobile %}column-reverse{% else %}column{% endif %};
    }
    
    .two-column-block-{{ ai_gen_id }} .column {
      flex: 0 0 100%;
    }
    
    .two-column-block-{{ ai_gen_id }} .column-heading {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
    
    .two-column-block-{{ ai_gen_id }} .column-text {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="two-column-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="column">
    {% if block.settings.left_content_type == 'text' %}
      <div class="column-content">
        {% if block.settings.left_heading != blank %}
          <h2 class="column-heading">{{ block.settings.left_heading }}</h2>
        {% endif %}
        
        {% if block.settings.left_text != blank %}
          <div class="column-text">{{ block.settings.left_text }}</div>
        {% endif %}
        
        {% if block.settings.left_button_text != blank and block.settings.left_button_link != blank %}
          <a href="{{ block.settings.left_button_link }}" class="column-button">
            {{ block.settings.left_button_text }}
          </a>
        {% endif %}
      </div>
    {% else %}
      <div class="column-image-container">
        {% if block.settings.left_image %}
          <img 
            src="{{ block.settings.left_image | image_url: width: 1000 }}" 
            alt="{{ block.settings.left_image.alt | escape }}"
            width="{{ block.settings.left_image.width }}"
            height="{{ block.settings.left_image.height }}"
            loading="lazy"
            class="column-image"
          >
        {% else %}
          <div class="column-placeholder">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
  
  <div class="column">
    {% if block.settings.right_content_type == 'text' %}
      <div class="column-content">
        {% if block.settings.right_heading != blank %}
          <h2 class="column-heading">{{ block.settings.right_heading }}</h2>
        {% endif %}
        
        {% if block.settings.right_text != blank %}
          <div class="column-text">{{ block.settings.right_text }}</div>
        {% endif %}
        
        {% if block.settings.right_button_text != blank and block.settings.right_button_link != blank %}
          <a href="{{ block.settings.right_button_link }}" class="column-button">
            {{ block.settings.right_button_text }}
          </a>
        {% endif %}
      </div>
    {% else %}
      <div class="column-image-container">
        {% if block.settings.right_image %}
          <img 
            src="{{ block.settings.right_image | image_url: width: 1000 }}" 
            alt="{{ block.settings.right_image.alt | escape }}"
            width="{{ block.settings.right_image.width }}"
            height="{{ block.settings.right_image.height }}"
            loading="lazy"
            class="column-image"
          >
        {% else %}
          <div class="column-placeholder">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>


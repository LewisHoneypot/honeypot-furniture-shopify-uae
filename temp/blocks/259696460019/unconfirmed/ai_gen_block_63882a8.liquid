{% doc %}
  @prompt
    Large text filled with an image, Add the option for Text Alignment. And an option to change the block background colour


{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .image-text-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding: {{ block.settings.vertical_padding }}px 0;
    overflow: hidden;
    display: flex;
    justify-content: {{ block.settings.text_alignment }};
    align-items: center;
    background-color: {{ block.settings.background_color }};
  }

  .image-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    line-height: 1;
    text-align: {{ block.settings.text_alignment }};
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
    background-size: cover;
    background-position: center;
    display: inline-block;
    max-width: 100%;
    padding: 0 20px;
    text-transform: {{ block.settings.text_transform }};
  }

  .image-text-{{ ai_gen_id }}--with-image {
    background-image: url('{{ block.settings.fill_image | image_url: width: 2000 }}');}

  .image-text-{{ ai_gen_id }}--with-placeholder {
    background-color: {{ block.settings.placeholder_color }};
  }

  .image-text-outline-{{ ai_gen_id }} {
    -webkit-text-stroke: {{ block.settings.outline_width }}px {{ block.settings.outline_color }};text-stroke: {{ block.settings.outline_width }}px {{ block.settings.outline_color }};
  }

  @media screen and (max-width: 749px) {
    .image-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size_mobile }}px;
    }
  }
{% endstyle %}

<div class="image-text-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <h2 
    class="image-text-{{ ai_gen_id }} {% if block.settings.fill_image %}image-text-{{ ai_gen_id }}--with-image{% else %}image-text-{{ ai_gen_id }}--with-placeholder{% endif %} {% if block.settings.show_outline %}image-text-outline-{{ ai_gen_id }}{% endif %}">
    {{ block.settings.text }}
  </h2>
</div>


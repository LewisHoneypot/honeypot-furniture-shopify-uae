{% doc %}
  @prompt
    On a grey background with hex code #ebebeb make an animated title with a  bounce effect that sits centred on the page, add an option to change the font for title
, make the animation only happen once at the point of page load


{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .animated-title-container-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    width: 100%;
    min-height: {{ block.settings.section_height }}px;}

  .animated-title-wrapper-{{ ai_gen_id }} {
    text-align: center;
    max-width: 100%;
  }

  .animated-title-{{ ai_gen_id }} {
    display: inline-block;
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    font-family: {{ block.settings.font.family }}, {{ block.settings.font.fallback_families }};
    font-style: {{ block.settings.font.style }};
    font-weight: {{ block.settings.font.weight }};
    color: {{ block.settings.text_color }};
    margin: 0;
    opacity: 0;
  }

  .animated-title-{{ ai_gen_id }}.animate {
    animation: bounce-{{ ai_gen_id }} {{ block.settings.animation_duration }}s ease forwards;
    animation-delay: {{ block.settings.animation_delay }}s;
  }

  @keyframes bounce-{{ ai_gen_id }} {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    20% {
      opacity: 1;
    }
    40% {
      transform: translateY(-{{ block.settings.bounce_height }}px);
    }
    60% {
      transform: translateY(-{{ block.settings.bounce_height | divided_by: 2 }}px);
    }
    80% {
      transform: translateY(-{{ block.settings.bounce_height | divided_by: 4 }}px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media screen and (max-width: 749px) {
    .animated-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size_mobile }}px;
    }
  }
{% endstyle %}

<div class="animated-title-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="animated-title-wrapper-{{ ai_gen_id }}">
    <h2 id="animated-title-{{ ai_gen_id }}" class="animated-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
  </div>
</div>

<script>
  (function() {
    document.addEventListener('DOMContentLoaded', function() {
      const title = document.getElementById('animated-title-{{ ai_gen_id }}');
      if (title) {
        // Add a small delay to ensure the element is fully rendered
        setTimeout(function() {
          title.classList.add('animate');
        }, 100);
      }
    });
  })();
</script>


{% doc %}
  @prompt
    I want a product highlight block I want to show 3 images of the product

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .product-highlight-{{ ai_gen_id }} {
    margin: {{ block.settings.margin }}px 0;
  }

  .product-highlight__container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.layout }}, 1fr);
    gap: {{ block.settings.gap }}px;}

  .product-highlight__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;{% if block.settings.add_shadow %}
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    {% endif %}
  }

  .product-highlight__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.image_fit }};
    aspect-ratio: {{ block.settings.aspect_ratio }};
    transition: transform 0.3s ease;
  }

  {% if block.settings.hover_effect %}
  .product-highlight__image-wrapper-{{ ai_gen_id }}:hover .product-highlight__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }
  {% endif %}

  .product-highlight__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    aspect-ratio: {{ block.settings.aspect_ratio }};
  }

  .product-highlight__placeholder-{{ ai_gen_id }} svg {
    width: 80%;
    height: 80%;
  }

  @media screen and (max-width: 749px) {
    .product-highlight__container-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.layout_mobile }}, 1fr);gap: {{ block.settings.gap | divided_by: 2 }}px;
    }
  }
{% endstyle %}

<div class="product-highlight-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.title != blank %}
    <h2 class="product-highlight__title-{{ ai_gen_id }}" style="text-align: {{ block.settings.title_alignment }}; margin-bottom: 20px; color: {{ block.settings.title_color }}; font-size: {{ block.settings.title_size }}px;">
      {{ block.settings.title }}
    </h2>
  {% endif %}

  <div class="product-highlight__container-{{ ai_gen_id }}">
    {% for i in (1..3) %}
      {% assign image_setting = 'image_' | append: i %}<div class="product-highlight__image-wrapper-{{ ai_gen_id }}">
        {% if block.settings[image_setting] != blank %}
          <img 
            src="{{ block.settings[image_setting] | image_url: width: 1000 }}"
            alt="{{ block.settings[image_setting].alt | escape }}"
            class="product-highlight__image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings[image_setting].width }}"
            height="{{ block.settings[image_setting].height }}"
          >
        {% else %}
          <div class="product-highlight__placeholder-{{ ai_gen_id }}">
            {{ 'product-apparel-1' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>


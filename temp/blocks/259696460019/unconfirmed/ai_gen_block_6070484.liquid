{% doc %}
  @prompt
    Large text filled with an image, Add the option for Text Alignment. And an option to change the block background colour
, Now make it two columns. Add a product card in the right column. Whilst keeping the Text content in the left column
, remove the button from the product card. Make the product card display 15% smaller


{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .image-text-product-container-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.vertical_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .image-text-product-wrapper-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 30px;
  }

  .image-text-column-{{ ai_gen_id }} {
    flex: 1;
    min-width: 300px;
    display: flex;
    justify-content: {{ block.settings.text_alignment }};
  }

  .product-column-{{ ai_gen_id }} {
    flex: 1;
    min-width: 300px;
    display: flex;
    justify-content: center;
  }

  .image-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    line-height: 1.2;
    text-align: {{ block.settings.text_alignment }};
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
    background-size: cover;
    background-position: center;
    display: inline-block;
    max-width: 100%;
    text-transform: {{ block.settings.text_transform }};
  }

  .image-text-{{ ai_gen_id }}--with-image {
    background-image: url('{{ block.settings.fill_image | image_url: width: 2000 }}');
  }

  .image-text-{{ ai_gen_id }}--with-placeholder {
    background-color: {{ block.settings.placeholder_color }};
  }

  .image-text-outline-{{ ai_gen_id }} {
    -webkit-text-stroke: {{ block.settings.outline_width }}px {{ block.settings.outline_color }};
    text-stroke: {{ block.settings.outline_width }}px {{ block.settings.outline_color }};
  }

  .product-card-{{ ai_gen_id }} {
    border-radius: {{ block.settings.product_border_radius }}px;
    overflow: hidden;
    background-color: {{ block.settings.product_background_color }};
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    width: 85%;
  }

  .product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
  }

  .product-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .product-image-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
  }

  .product-info-{{ ai_gen_id }} {
    padding: 20px;
  }

  .product-title-{{ ai_gen_id }} {
    font-size: 18px;
    font-weight: 600;
    margin: 0 0 10px;
    color: {{ block.settings.product_text_color }};
  }

  .product-price-{{ ai_gen_id }} {
    font-size: 16px;
    font-weight: 500;
    margin: 0;
    color: {{ block.settings.product_text_color }};
  }

  @media screen and (max-width: 749px) {
    .image-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size_mobile }}px;
    }
  }
{% endstyle %}

<div class="image-text-product-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="image-text-product-wrapper-{{ ai_gen_id }}">
    <div class="image-text-column-{{ ai_gen_id }}">
      <h2 
        class="image-text-{{ ai_gen_id }} {% if block.settings.fill_image %}image-text-{{ ai_gen_id }}--with-image{% else %}image-text-{{ ai_gen_id }}--with-placeholder{% endif %} {% if block.settings.show_outline %}image-text-outline-{{ ai_gen_id }}{% endif %}">
        {{ block.settings.text }}
      </h2>
    </div>
    
    <div class="product-column-{{ ai_gen_id }}">
      <div class="product-card-{{ ai_gen_id }}">
        <div class="product-image-wrapper-{{ ai_gen_id }}">
          {% if block.settings.product.featured_image %}
            <img 
              src="{{ block.settings.product.featured_image | image_url: width: 600 }}" 
              alt="{{ block.settings.product.featured_image.alt | escape }}"
              class="product-image-{{ ai_gen_id }}"
              loading="lazy"
              width="{{ block.settings.product.featured_image.width }}"
              height="{{ block.settings.product.featured_image.height }}"
            >
          {% else %}
            <div class="product-image-placeholder-{{ ai_gen_id }}">
              {{ 'product-apparel-1' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>
        <div class="product-info-{{ ai_gen_id }}">
          <h3 class="product-title-{{ ai_gen_id }}">
            {% if block.settings.product %}
              {{ block.settings.product.title }}
            {% else %}
              Sample Product
            {% endif %}
          </h3>
          <div class="product-price-{{ ai_gen_id }}">
            {% if block.settings.product %}
              {{ block.settings.product.price | money }}
            {% else %}
              $19.99
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


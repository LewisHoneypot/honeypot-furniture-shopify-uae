{% doc %}
  @prompt
    I want a product highlight block I want to show 3 images of the product, Instead of images from the media library, I want them to be 3 products


{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .product-highlight-{{ ai_gen_id }} {
    margin: {{ block.settings.margin }}px 0;
  }

  .product-highlight__container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.layout }}, 1fr);
    gap: {{ block.settings.gap }}px;}

  .product-highlight__product-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    {% if block.settings.add_shadow %}
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    {% endif %}
    height: 100%;
  }

  .product-highlight__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .product-highlight__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.image_fit }};
    aspect-ratio: {{ block.settings.aspect_ratio }};
    transition: transform 0.3s ease;
  }

  {% if block.settings.hover_effect %}.product-highlight__image-wrapper-{{ ai_gen_id }}:hover .product-highlight__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }
  {% endif %}

  .product-highlight__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    aspect-ratio: {{ block.settings.aspect_ratio }};
  }

  .product-highlight__placeholder-{{ ai_gen_id }} svg {
    width: 80%;
    height: 80%;
  }

  .product-highlight__info-{{ ai_gen_id }} {
    padding: 15px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .product-highlight__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    margin: 0 0 8px 0;
    color: {{ block.settings.product_title_color }};
    {% if block.settings.truncate_title %}
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    {% endif %}
  }

  .product-highlight__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    margin: 0 0 15px 0;
    color: {{ block.settings.price_color }};
  }

  .product-highlight__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 8px 16px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: 4px;
    text-align: center;
    transition: background-color 0.3s ease;
    margin-top: auto;
  }

  .product-highlight__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  @media screen and (max-width: 749px) {
    .product-highlight__container-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.layout_mobile }}, 1fr);gap: {{ block.settings.gap | divided_by: 2 }}px;
    }
  }
{% endstyle %}

<div class="product-highlight-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.title != blank %}
    <h2 class="product-highlight__heading-{{ ai_gen_id }}" style="text-align: {{ block.settings.title_alignment }}; margin-bottom: 20px; color: {{ block.settings.title_color }}; font-size: {{ block.settings.title_size }}px;">
      {{ block.settings.title }}
    </h2>
  {% endif %}

  <div class="product-highlight__container-{{ ai_gen_id }}">
    {% for i in (1..3) %}
      {% assign product_setting = 'product_' | append: i %}
      {% assign product = block.settings[product_setting] %}
      
      {% if product != blank %}
        <div class="product-highlight__product-{{ ai_gen_id }}">
          <a href="{{ product.url }}" class="product-highlight__image-wrapper-{{ ai_gen_id }}">
            {% if product.featured_image != blank %}
              <img 
                src="{{ product.featured_image | image_url: width: 800 }}"
                alt="{{ product.featured_image.alt | default: product.title | escape }}"
                class="product-highlight__image-{{ ai_gen_id }}"
                loading="lazy"
                width="{{ product.featured_image.width }}"
                height="{{ product.featured_image.height }}"
              >
            {% else %}
              <div class="product-highlight__placeholder-{{ ai_gen_id }}">
                {{ 'product-apparel-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </a><div class="product-highlight__info-{{ ai_gen_id }}">
            <h3 class="product-highlight__title-{{ ai_gen_id }}">
              <a href="{{ product.url }}" style="text-decoration: none; color: inherit;">{{ product.title }}</a>
            </h3>
            <div class="product-highlight__price-{{ ai_gen_id }}">
              {% if product.compare_at_price > product.price %}
                <span style="text-decoration: line-through; opacity: 0.7; margin-right: 8px;">{{ product.compare_at_price | money }}</span>{% endif %}
              <span>{{ product.price | money }}</span>
            </div>
            
            {% if block.settings.show_button %}
              <a href="{{ product.url }}" class="product-highlight__button-{{ ai_gen_id }}">
                {{ block.settings.button_text }}
              </a>
            {% endif %}
          </div>
        </div>
      {% else %}
        <div class="product-highlight__product-{{ ai_gen_id }}">
          <div class="product-highlight__image-wrapper-{{ ai_gen_id }}">
            <div class="product-highlight__placeholder-{{ ai_gen_id }}">
              {{ 'product-apparel-1' | placeholder_svg_tag }}
            </div>
          </div>
          
          <div class="product-highlight__info-{{ ai_gen_id }}">
            <h3 class="product-highlight__title-{{ ai_gen_id }}">Product title</h3><div class="product-highlight__price-{{ ai_gen_id }}">$0.00</div>
            
            {% if block.settings.show_button %}
              <span class="product-highlight__button-{{ ai_gen_id }}">
                {{ block.settings.button_text }}
              </span>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>


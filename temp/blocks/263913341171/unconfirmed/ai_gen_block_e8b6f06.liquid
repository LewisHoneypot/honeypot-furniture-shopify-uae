{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .hero-block-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    min-height: {{ block.settings.min_height }}px;
  }

  @media screen and (max-width: 749px) {
    .hero-block-{{ ai_gen_id }} {
      min-height: {{ block.settings.min_height_mobile }}px;
    }
  }

  .hero-image-container-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .hero-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
    opacity: 0.5;
  }

  .hero-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    min-height: {{ block.settings.min_height }}px;
    display: flex;
    align-items: center;
    justify-content: {{ block.settings.content_horizontal_alignment }};
    padding: {{ block.settings.content_padding }}px;
  }

  @media screen and (max-width: 749px) {
    .hero-content-{{ ai_gen_id }} {
      min-height: {{ block.settings.min_height_mobile }}px;
      padding: {{ block.settings.content_padding_mobile }}px;
    }
  }

  .hero-text-wrapper-{{ ai_gen_id }} {
    max-width: {{ block.settings.text_max_width }}px;
    text-align: {{ block.settings.text_alignment }};
    {% if block.settings.enable_text_background %}
      background-color: {{ block.settings.text_background_color }};
      padding: {{ block.settings.text_padding }}px;
      border-radius: {{ block.settings.text_border_radius }}px;
    {% endif %}
  }

  .hero-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    margin-top: 0;
    margin-bottom: {{ block.settings.heading_spacing }}px;
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    line-height: 1.2;
  }

  .hero-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    margin-bottom: {{ block.settings.text_spacing }}px;
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_mobile }}px;
    }

    .hero-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size_mobile }}px;
    }
  }

  {% if block.settings.enable_text_animation %}
    .hero-text-wrapper-{{ ai_gen_id }} {
      opacity: 0;
      transform: translateY(20px);
      transition: opacity 0.8s ease, transform 0.8s ease;
    }

    .hero-text-wrapper-{{ ai_gen_id }}.animate {
      opacity: 1;
      transform: translateY(0);
    }
  {% endif %}

  .hero-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 500;
    transition: background-color 0.3s ease, transform 0.3s ease;
    margin-top: 10px;
  }

  .hero-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    transform: translateY(-2px);
  }
{% endstyle %}

<div class="hero-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="hero-image-container-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img 
        src="{{ block.settings.image | image_url: width: 2000 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        class="hero-image-{{ ai_gen_id }}"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
      >
    {% else %}
      <div class="hero-image-placeholder-{{ ai_gen_id }}">
        {{ 'lifestyle-1' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div><div class="hero-content-{{ ai_gen_id }}">
    <div class="hero-text-wrapper-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="hero-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}
      
      {% if block.settings.text != blank %}
        <div class="hero-text-{{ ai_gen_id }}">{{ block.settings.text }}</div>
      {% endif %}
      
      {% if block.settings.button_text != blank and block.settings.button_link != blank %}
        <a href="{{ block.settings.button_link }}" class="hero-button-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

{% if block.settings.enable_text_animation %}
<script>
  (function() {
    const textWrapper = document.querySelector('.hero-text-wrapper-{{ ai_gen_id }}');
    
    function checkIfInView() {
      const rect = textWrapper.getBoundingClientRect();
      const windowHeight = window.innerHeight || document.documentElement.clientHeight;
      
      if (rect.top <= windowHeight * 0.75) {
        textWrapper.classList.add('animate');
        window.removeEventListener('scroll', checkIfInView);
      }
    }
    
    window.addEventListener('scroll', checkIfInView);
    checkIfInView(); // Check on initial load
  })();
</script>
{% endif %}


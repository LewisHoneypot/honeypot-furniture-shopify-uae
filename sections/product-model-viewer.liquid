{% comment %}
  Shopify Section: Product Model Viewer (360 View)
  - Simple 3D model viewer using Shopify native viewer
  - Supports .glb and .usdz files
  - Simplest 360 solution - just upload 1 file!
{% endcomment %}

<section class="section product-model-viewer-section" style="max-width: 1092px; margin: 0 auto">
  <div class="model-viewer-wrapper">
    {% if section.settings.show_heading %}
      <h2 class="model-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="model-container">
      {% if section.settings.model_file != blank %}
        <model-viewer
          src="{{ section.settings.model_file | image_url }}"
          alt="Product 360 View"
          auto-rotate
          camera-controls
          ar
          style="width: 100%; height: 600px; background: linear-gradient(135deg, #f8f8f8 0%, #ffffff 100%);"
        ></model-viewer>
      {% else %}
        <div class="placeholder">
          <p>Please upload a 3D model file (.glb or .usdz)</p>
        </div>
      {% endif %}
    </div>

    <div class="model-info">
      <p class="info-text">ðŸ’¡ Drag to rotate â€¢ Scroll to zoom â€¢ Double-tap for AR</p>
    </div>
  </div>
</section>

<style>
.product-model-viewer-section {
  padding: 60px 20px;
  background: #f9f9f9;
}

.model-viewer-wrapper {
  max-width: 1000px;
  margin: 0 auto;
}

.model-heading {
  text-align: center;
  font-size: 32px;
  font-weight: 600;
  color: #2a2a2a;
  margin-bottom: 40px;
  margin-top: 0;
}

.model-container {
  width: 100%;
  background: #fff;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.placeholder {
  width: 100%;
  height: 600px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f8f8f8 0%, #ffffff 100%);
  color: #999;
  font-size: 18px;
}

.model-info {
  text-align: center;
  margin-top: 30px;
}

.info-text {
  color: #666;
  font-size: 14px;
  margin: 0;
}

@media (max-width: 768px) {
  .product-model-viewer-section {
    padding: 40px 15px;
  }

  .model-heading {
    font-size: 24px;
    margin-bottom: 30px;
  }

  model-viewer {
    height: 400px !important;
  }

  .placeholder {
    height: 400px;
  }
}

@media (max-width: 480px) {
  .product-model-viewer-section {
    padding: 30px 10px;
  }

  .model-heading {
    font-size: 18px;
    margin-bottom: 20px;
  }

  model-viewer {
    height: 300px !important;
  }

  .placeholder {
    height: 300px;
  }

  .info-text {
    font-size: 12px;
  }
}
</style>


<script async type="module" src="https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js" differ></script>

{% schema %}
{
  "name": "Product Viewer (360)",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Explore this sofa in 360 view"
    },
    {
      "type": "checkbox",
      "id": "show_heading",
      "label": "Show Heading",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "model_file",
      "label": "Upload 3D Model File (.glb or .usdz)"
    }
  ],
  "presets": [
    {
      "name": "Product Model Viewer"
    }
  ]
}
{% endschema %}

{% schema %}
{
  "name": "Why Performance",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why Performance?"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Because great furniture should do more than look good. Our pieces are crafted for everyday living â€” durable materials, thoughtful construction, and finishes that stand up to time, use, and style. From comfort to craftsmanship, performance is built into every detail."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP SOFA NOW!"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Right Side Image"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f5f5f5"
    }
  ],
  "presets": [
    {
      "name": "Why Performance"
    }
  ]
}
{% endschema %}

<section 
  class="why-performance-section" 
  style="background-color: {{ section.settings.background_color }}; max-width: 1400px; margin: 0 auto;"
>
  <div class="page-width">
    <div class="why-performance-wrapper">

      <!-- Left Content -->
      <div class="why-performance-content">
        {% if section.settings.heading != blank %}
          <h2 class="why-title">
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.description != blank %}
          <div class="why-description">
            {{ section.settings.description }}
          </div>
        {% endif %}

        {% if section.settings.button_text != blank %}
          <a 
            href="{{ section.settings.button_link }}" 
            class="why-button"
          >
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>

      <!-- Right Image -->
      <div class="why-performance-image">
        {% if section.settings.image != blank %}
          <img
            src="{{ section.settings.image | image_url: width: 1200 }}"
            alt="Why Performance Image"
            loading="lazy"
            width="1200"
            height="auto"
          >
        {% endif %}
      </div>

    </div>
  </div>
</section>

<style>
.why-performance-section {
  padding: 80px 20px;
}

.why-performance-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 60px;
  flex-wrap: wrap;
}

.why-performance-content {
  flex: 1;
  max-width: 500px;
}

.why-title {
  font-size: 36px;
  font-weight: 600;
  margin-bottom: 20px;
}

.why-description {
  font-size: 16px;
  line-height: 1.7;
  color: #555;
  margin-bottom: 30px;
}

.why-button {
  display: inline-block;
  padding: 14px 28px;
  background-color: #c8a27a;
  color: #fff;
  text-decoration: none;
  font-size: 14px;
  letter-spacing: 1px;
  border-radius: 4px;
  transition: 0.3s ease;
}

.why-button:hover {
  opacity: 0.85;
}

.why-performance-image {
  flex: 1;
  text-align: right;
}

.why-performance-image img {
  width: 100%;
  max-width: 650px;
  height: auto;
}

/* Responsive */
@media (max-width: 992px) {
  .why-performance-wrapper {
    flex-direction: column;
    text-align: center;
  }

  .why-performance-image {
    text-align: center;
  }

  .why-performance-content {
    max-width: 100%;
  }

  .why-title {
    font-size: 28px;
  }
}
</style>

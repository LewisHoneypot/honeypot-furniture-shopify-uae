{% comment %}
  Full Banner with Heading + Paragraph (--- text --- style) + Background
{% endcomment %}
<section class="breadcrumb-banner" 
  style="position: relative; background-image: url({{ section.settings.bg_image | image_url: width: 1600 }}); background-size: cover; background-position: center; min-height: 400px; display: flex; align-items: center; justify-content: center; text-align: center; color: white;">
  
  <!-- Dark overlay -->
  <div style="position: absolute; inset: 0; background: rgba(0,0,0,0.4);"></div>

  <!-- Content -->
  <div style="position: relative; z-index: 2; max-width: 900px; padding: 20px;">

    {%- if section.settings.banner_heading != blank -%}
      <h1 style="font-size: 42px; font-weight: 700; margin-bottom: 20px;">
        {{ section.settings.banner_heading }}
      </h1>
    {%- endif -%}

    {%- if section.settings.banner_text != blank -%}
      <div style="display: flex; align-items: center; justify-content: center; gap: 10px; margin-top: 10px;">
        <span style="flex: 1; height: 1px; background: #fff; max-width: 120px;"></span>
        <p style="margin: 0; font-size: 18px; font-weight: 400;">
          {{ section.settings.banner_text }}
        </p>
        <span style="flex: 1; height: 1px; background: #fff; max-width: 120px;"></span>
      </div>
    {%- endif -%}

  </div>
</section>

{% schema %}
{
  "name": "Breadcrumb Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "banner_heading",
      "label": "Heading",
      "default": "Your Heading Here"
    },
    {
      "type": "text",
      "id": "banner_text",
      "label": "Paragraph Text",
      "default": "This is the paragraph text."
    }
  ],
  "presets": [
    {
      "name": "Breadcrumb Banner"
    }
  ]
}
{% endschema %}

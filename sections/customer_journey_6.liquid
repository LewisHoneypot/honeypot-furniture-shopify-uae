{% comment %}
  Customer Journey 6 Section - Fully Customizable
  Responsive - with top content and bottom beige block
{% endcomment %}

<section class="customer-journey-section" id="{{ section.settings.section_id | default: 'journey-section' }}">
  <div class="creation-delivery">
    <div class="creation-top">
      <div class="creation-text">
        {% if section.settings.heading_number != blank %}
          <h2 class="creation-number">{{ section.settings.heading_number }}</h2>
        {% endif %}
        {% if section.settings.heading != blank %}
          <h3 class="creation-title">{{ section.settings.heading }}</h3>
        {% endif %}
        {% if section.settings.description != blank %}
          <p class="creation-desc">{{ section.settings.description }}</p>
        {% endif %}
      </div>
      <div class="creation-images">
        {% if section.settings.image_1 != blank %}
          <div class="creation-image image-1">
            <img src="{{ section.settings.image_1 | img_url: '800x800' }}" alt="Creation image 1">
          </div>
        {% endif %}
        {% if section.settings.image_2 != blank %}
          <div class="creation-image image-2">
            <img src="{{ section.settings.image_2 | img_url: '800x800' }}" alt="Creation image 2">
          </div>
        {% endif %}
      </div>
    </div>
  </div>

  <div class="creation-bottom">
    <div class="creation-bottom-inner">
      {% if section.settings.bottom_heading != blank %}
        <h4 class="bottom-heading">{{ section.settings.bottom_heading }}</h4>
      {% endif %}
      {% if section.settings.steps_text != blank %}
        <div class="steps">
          {% assign steps_array = section.settings.steps_text | split: "→" %}
          {% for step in steps_array %}
            <h4 class="step-item">{{ step | strip }}</h4>
            {% unless forloop.last %}
              <span class="arrow">→</span>
            {% endunless %}
          {% endfor %}
        </div>
      {% endif %}
      {% if section.settings.bottom_desc != blank %}
        <p class="bottom-desc">{{ section.settings.bottom_desc }}</p>
      {% endif %}
    </div>
  </div>
</section>

<style>
.customer-journey-section {
  width: 100%;
}

.creation-delivery {
  background: {{ section.settings.top_bg_color | default: '#ffffff' }};
  color: {{ section.settings.top_text_color | default: '#000000' }};
  padding: {{ section.settings.top_padding_top }}px {{ section.settings.top_padding_sides }}px {{ section.settings.top_padding_bottom }}px {{ section.settings.top_padding_sides }}px;
  max-width: {{ section.settings.section_max_width }}px;
  margin: 0 auto;
  {% if section.settings.top_bg_image %}
    background-image: url('{{ section.settings.top_bg_image | img_url: '2000x' }}');
    background-size: {{ section.settings.top_bg_size }};
    background-position: {{ section.settings.top_bg_position }};
    background-repeat: {{ section.settings.top_bg_repeat }};
  {% endif %}
}

.creation-top {
  display: flex;
  align-items: {{ section.settings.content_alignment }};
  justify-content: space-between;
  {% comment %} gap: {{ section.settings.content_gap }}px; {% endcomment %}
   gap: 102px
  {% comment %} flex-wrap: wrap; {% endcomment %}
}

.creation-text {
  flex: 1 1 {{ section.settings.text_width }}%;
  text-align: {{ section.settings.text_alignment }};
}

.creation-number {
  font-size: {{ section.settings.number_size }}px;
  font-weight: {{ section.settings.number_weight }};
  color: {{ section.settings.number_color }};
  margin-bottom: {{ section.settings.number_margin_bottom }}px;
  line-height: {{ section.settings.number_line_height }};
  font-family: {{ section.settings.number_font }};
}

.creation-title {
  font-size: {{ section.settings.title_size }}px;
  font-weight: {{ section.settings.title_weight }};
  color: {{ section.settings.title_color }};
  margin-bottom: {{ section.settings.title_margin_bottom }}px;
  line-height: {{ section.settings.title_line_height }};
  font-family: {{ section.settings.title_font }};
}

.creation-desc {

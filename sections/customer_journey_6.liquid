  font-family: {{ section.settings.bottom_desc_font }};
  padding: {{ section.settings.bottom_desc_padding_vertical }}px {{ section.settings.bottom_desc_padding_horizontal }}px;
}

/* Responsive */
@media (max-width: 768px) {
  .creation-top {
    flex-direction: {{ section.settings.mobile_layout }};
    text-align: {{ section.settings.mobile_text_alignment }};
    gap: {{ section.settings.mobile_content_gap }}px;
    flex-direction: column-reverse;
  }
  .customer-journey-section .creation-delivery {
    background: #fff;
    text-align: left;
    padding: 0px 0px !important;
}
  
  .creation-text {
    flex: 1 1 100%;
    text-align: {{ section.settings.mobile_text_alignment }};
    padding: 15px;
  }
  
  .creation-images {
    flex-direction: {{ section.settings.mobile_images_layout }};
    flex: 1 1 100%;
    gap: {{ section.settings.mobile_images_gap }}px;
  }
  
  .creation-image {
    flex: 1 1 100%;
  }
  
  .creation-number {
    font-size: {{ section.settings.mobile_number_size }}px;
  }
  

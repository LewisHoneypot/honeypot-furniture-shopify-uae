  font-weight: {{ section.settings.bottom_heading_weight }};
  color: {{ section.settings.bottom_heading_color }};
  margin-bottom: {{ section.settings.bottom_heading_margin_bottom }}px;
  line-height: {{ section.settings.bottom_heading_line_height }};
  {% comment %} font-family: {{ section.settings.bottom_heading_font }}; {% endcomment %}
}

/* Steps in one flex row */
.customer-journey-section .steps {
  display: flex;
  justify-content: {{ section.settings.steps_justify }};
  align-items: {{ section.settings.steps_align }};
  flex-wrap: wrap;
  gap: {{ section.settings.steps_gap }}px;
  margin-bottom: {{ section.settings.steps_margin_bottom }}px;
}

.customer-journey-section .step-item {
  font-size: {{ section.settings.step_item_size }}px;
  font-weight: {{ section.settings.step_item_weight }};
  color: {{ section.settings.step_item_color }};

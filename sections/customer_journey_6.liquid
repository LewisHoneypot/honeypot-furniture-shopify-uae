  line-height: {{ section.settings.desc_line_height }};
  color: {{ section.settings.desc_color }};
  font-weight: {{ section.settings.desc_weight }};
  font-family: {{ section.settings.desc_font }};
  margin-bottom: {{ section.settings.desc_margin_bottom }}px;
}

.creation-images {
  flex: 1 1 {{ section.settings.images_width }}%;
  display: flex;
  gap: {{ section.settings.images_gap }}px;
  flex-wrap: wrap;
}

.creation-image {
  flex: 1 1 calc(50% - {{ section.settings.images_gap | divided_by: 2 }}px);
}

.creation-image img {
  width: 100%;
  height: auto;
  display: block;
  border-radius: {{ section.settings.image_border_radius }}px;
  border: {{ section.settings.image_border_width }}px solid {{ section.settings.image_border_color }};
}

/* Bottom Beige Section */
.creation-bottom {
  background: {{ section.settings.bottom_bg_color | default: '#f5eee8' }};
  margin-top: {{ section.settings.bottom_margin_top }}px;
  padding: {{ section.settings.bottom_padding_top }}px {{ section.settings.bottom_padding_sides }}px {{ section.settings.bottom_padding_bottom }}px {{ section.settings.bottom_padding_sides }}px;

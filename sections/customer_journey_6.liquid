  font-family: {{ section.settings.step_item_font }};
  padding: {{ section.settings.step_item_padding_vertical }}px {{ section.settings.step_item_padding_horizontal }}px;
  background: {{ section.settings.step_item_bg_color }};
  border-radius: {{ section.settings.step_item_border_radius }}px;
  border: {{ section.settings.step_item_border_width }}px solid {{ section.settings.step_item_border_color }};
}

.customer-journey-section .arrow {
  font-size: {{ section.settings.arrow_size }}px;
  font-weight: {{ section.settings.arrow_weight }};
  color: {{ section.settings.arrow_color }};
  line-height: {{ section.settings.arrow_line_height }};
}

.bottom-desc {

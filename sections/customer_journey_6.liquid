  }
  
  .customer-journey-section .step-item {
    font-size: {{ section.settings.mobile_step_item_size }}px;
    white-space: normal;
    text-align: center;
  }
  
  .customer-journey-section .arrow {
    font-size: {{ section.settings.mobile_arrow_size }}px;
  }
  
  .bottom-desc {

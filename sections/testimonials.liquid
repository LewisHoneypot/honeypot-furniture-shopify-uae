{
  "name": "Testimonials",
  "settings": [
    { "type": "image_picker", "id": "section_image", "label": "Left Side Static Image" },

    { "type": "text", "id": "heading", "label": "Heading", "default": "Testimonials" },
    { "type": "image_picker", "id": "rating_logo", "label": "Rating Logo (Google)" },
    { "type": "text", "id": "rating_score", "label": "Rating Score", "default": "4.8" },
    { "type": "url", "id": "reviews_link", "label": "See All Reviews Link" }
  ],
  "blocks": [
    {
      "type": "testimonial_block",
      "name": "Testimonial",
      "settings": [
        { "type": "text", "id": "quote", "label": "Quote", "default": "Donec nibh magna, interdum quis massa sed, rhoncus laoreet quam." },
        { "type": "image_picker", "id": "avatar", "label": "Reviewer Avatar" },
        { "type": "text", "id": "name", "label": "Reviewer Name" },
        { "type": "text", "id": "title", "label": "Reviewer Title" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "category": "Custom Sections",
      "blocks": [
        { "type": "testimonial_block" },
        { "type": "testimonial_block" },
        { "type": "testimonial_block" }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
/* === Base === */

.main-slider-container{
  position: relative;
    width: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}
.testimonials-section {
  background-color: #F9F7F5;
  padding: 20px 0;
}

.testimonial-stage {
  position: relative;
  max-width: 1200px;
  margin: 0 auto;
}

.testimonial-slides {
display: flex;
}

/* === Slide === */
.testimonial-slide {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 32px;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.45s ease;
  left: 57px;
}
.testimonial-slide.is-active {
  opacity: 1;
  pointer-events: auto;
  z-index: 2;
}

.testimonial-image-col {
width: 50%;
max-height: 450px;
}
.testimonial-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* === Content === */
.testimonial-content-col {
display: none;
  flex: 1 1 48%;
  max-width: 560px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.testimonial-heading {
  font-size: 1.6rem;
  font-weight: 600;
  color: #111;
  margin-bottom: 14px;
}

/* === Rating + Arrows inline === */
.testimonial-rating {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 1rem;
  margin-bottom: 1.25rem;
}

.rating-left {
  display: flex;
  align-items: center;
  gap: 14px;
}

.rating-logo {
  height: 22px;
}

.rating-info {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.rating-text {
  font-size: .95rem;
  color: #555;
  margin: 0;
}

.rating-score {
  display: flex;
  align-items: center;
  gap: 6px;
  color: #111;
  font-weight: 600;
  margin: 0;
}

.rating-stars {
  color: #FFA500;
}

/* Inline arrows */
.testimonial-controls-inline {
  display: flex;
  gap: 8px;
}
.testimonial-nav {
  width: 25px;
  height: 25px;
  border: none;
  background: none;
  color: #333;
  border-radius: 4px;
  cursor: pointer;
  line-height: 34px;
  text-align: center;
  transition: border-color 0.2s ease, color 0.2s ease;
}
.testimonial-nav:hover {
  border-color: #111;
  color: #111;
}

/* === Dots below arrows (and aligned near reviewer) === */
.testimonial-dots-inline {
  display: flex;
  justify-content: flex-end;
  margin: 10px 0 12px;
  gap: 6px;
}

.testimonial-dots-inline .dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: #CCC;
  border: none;
  cursor: pointer;
  transition: background 0.3s ease;
}
.testimonial-dots-inline .dot.active {
  background: #111;
}

/* === Quote & User === */
.testimonial-quote {
  color: #333;
  font-size: 1rem;
  line-height: 1.6;
  margin: 12px 0;
}

.testimonial-user {
  display: flex;
  align-items: center;
  gap: 10px;
}

.testimonial-avatar {
  width: 44px;
  height: 44px;
  border-radius: 50%;
  object-fit: cover;
}

.testimonial-name {
  font-weight: 600;
  color: #111;
  margin: 0;
  font-size: 1.2rem;
}

.testimonial-title {
  color: #777;
  margin: 0;
  font-size: 1.1rem;
}

/* === Responsive === */
@media (max-width: 900px) {
  .testimonial-slides { 
    flex-wrap: wrap;

  
  }

  .testimonial-image-col{
    width: 100%;
    height: auto;

  }
  .main-slider-container{
    width: 100%;
            height: 350px;

  }

  .testimonial-content-col { 
    text-align: center;
    width: 100%;


  }

  .testimonial-slide{
    top:  0;
    left: 0;
  }
  .testimonial-rating { flex-direction: column; gap: 10px; }
  .testimonial-dots-inline { justify-content: center; }
}
{% endstylesheet %}

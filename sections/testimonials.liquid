<section class="testimonials-section" id="Testimonials-{{ section.id }}">
  <div class="page-width">
    <div class="testimonial-stage" data-section-id="{{ section.id }}">
      <div class="testimonial-slides">
        <!-- Static left image (only once per section) -->
        <div class="testimonial-image-col">
          {% if section.settings.section_image != blank %}
            <img
              src="{{ section.settings.section_image | image_url: width: 1400 }}"
              alt="{{ section.settings.heading | escape }}"
              loading="lazy"
              class="testimonial-image"
            >
          {% endif %}
        </div>

        <!-- All testimonial blocks -->
        <div class="main-slider-container">
        {% for block in section.blocks %}
          <div class="testimonial-slide{% if forloop.first %} is-active{% endif %}" {{ block.shopify_attributes }}>
            <div class="testimonial-content-col">
              <h2 class="testimonial-heading">{{ section.settings.heading }}</h2>

              <div class="testimonial-rating">
                <div class="rating-left">
                  {% if section.settings.rating_logo != blank %}
                    <img
                      src="{{ section.settings.rating_logo | image_url: width: 160 }}"
                      alt="Rating"
                      loading="lazy"
                      class="rating-logo"
                    >
                  {% endif %}
                  <div class="rating-info">
                    <p class="rating-text">Google Rating</p>
                    <p class="rating-score">
                      {{ section.settings.rating_score }}
                      <span class="rating-stars">★★★★★</span>
                    </p>
                    {% if section.settings.reviews_link != blank %}
                      <a href="{{ section.settings.reviews_link }}" target="_blank" rel="noopener" class="see-all-link">
                        See all reviews
                      </a>
                    {% endif %}
                  </div>
                </div>

                <!-- Inline arrows -->
                <div class="testimonial-controls-inline">
                  <button class="testimonial-nav testimonial-prev" aria-label="Previous">&#10094;</button>
                  <button class="testimonial-nav testimonial-next" aria-label="Next">&#10095;</button>
                </div>
              </div>

              <p class="testimonial-quote">“{{ block.settings.quote }}”</p>

              <!-- Dots inline below arrows -->
              <div class="testimonial-dots-inline"></div>

              <div class="testimonial-user">
                {% if block.settings.avatar != blank %}
                  <img
                    src="{{ block.settings.avatar | image_url: width: 120 }}"
                    alt="{{ block.settings.name | escape }}"
                    loading="lazy"
                    class="testimonial-avatar"
                  >
                {% endif %}
                <div class="testimonial-user-info">
                  <p class="testimonial-name">{{ block.settings.name }}</p>
                  <p class="testimonial-title">{{ block.settings.title }}</p>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>


<script>
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.testimonial-stage').forEach(stage => {
      const slides = Array.from(stage.querySelectorAll('.testimonial-slide'));
      let current = 0;

      function render() {
        slides.forEach((slide, i) => {
          slide.classList.toggle('is-active', i === current);
          const dotsContainer = slide.querySelector('.testimonial-dots-inline');
          dotsContainer.innerHTML = '';
          slides.forEach((_, j) => {
            const dot = document.createElement('button');
            dot.className = 'dot' + (j === current ? ' active' : '');
            dot.addEventListener('click', () => {
              current = j;
              render();
            });
            dotsContainer.appendChild(dot);
          });
        });
      }

      function go(delta) {
        current = (current + delta + slides.length) % slides.length;
        render();
      }

      // Event delegation so arrows always work
      stage.addEventListener('click', (e) => {
        if (e.target.closest('.testimonial-prev')) go(-1);
        if (e.target.closest('.testimonial-next')) go(1);
      });

      render();
    });
  });
</script>


{% schema %}
{
  "name": "Custom Sofa Steps",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Design You Custom Sofa With Honeypot"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "From concept to comfort, we craft a sofa thatâ€™s just as unique as you!"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "type": "text",
          "id": "number",
          "label": "Step Number",
          "default": "01"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Step Title",
          "default": "Design"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Custom Sofa Steps",
      "blocks": [
        { "type": "step" },
        { "type": "step" },
        { "type": "step" },
        { "type": "step" },
        { "type": "step" },
        { "type": "step" }
      ]
    }
  ]
}
{% endschema %}

<section class="custom-sofa-steps">
  <div class="page-width">
    <h2 class="section-heading">{{ section.settings.heading }}</h2>

    <div class="steps-wrapper">
      {% for block in section.blocks %}
        <div class="step-item {% if forloop.last %}last{% endif %}" {{ block.shopify_attributes }}>
          <div class="step-circle">
            <span>{{ block.settings.number }}</span>
          </div>
          <p class="step-title">{{ block.settings.title }}</p>
        </div>
      {% endfor %}
    </div>

    <p class="section-subheading">
      {{ section.settings.subheading }}
    </p>

    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="steps-btn">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</section>

<style>
/* ================= SECTION ================= */
.custom-sofa-steps {
  background: #f4efe9;
  padding: 60px 20px;
  text-align: center;
}

/* ================= TEXT ================= */
.section-heading {
  font-size: 28px;
  margin-bottom: 48px;
}

.section-subheading {
  margin-top: 40px;
  font-size: 14px;
  max-width: 520px;
  margin-left: auto;
  margin-right: auto;
}

/* ================= STEPS ================= */
.steps-wrapper {
  display: flex;
  justify-content: center;
  align-items: flex-start;
}

.step-item {
  position: relative;
  width: 130px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* Connector line */
.step-item::after {
  content: "";
  position: absolute;
  top: 36px; /* center of 72px circle */
  right: -35px;
  width: 70px;
  border-top: 1px dashed #d4b48c;
}

.step-item.last::after {
  display: none;
}

/* ================= CIRCLE ================= */
.step-circle {
  width: 72px;
  height: 72px;
  border-radius: 50%;
  border: 2px dashed #d4b48c;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.step-circle span {
  font-size: 18px;
  color: #d4b48c;
  font-weight: 500;
}

.step-title {
  margin-top: 10px;
  font-size: 14px;
  font-weight: 600;
}

/* ================= BUTTON ================= */
.steps-btn {
  display: inline-block;
  margin-top: 24px;
  padding: 10px 28px;
  border: 1px solid #444;
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: 1px;
  text-decoration: none;
  color: #000;
}

/* ================= MOBILE ================= */
@media (max-width: 768px) {
  .steps-wrapper {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px 16px;
  }

  .step-item {
    width: auto;
  }

  .step-item::after {
    display: none;
  }

  .section-heading {
    font-size: 24px;
  }
}
</style>

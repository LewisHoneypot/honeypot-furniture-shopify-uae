{% style %}
.honeypot-wrapper {
  background-color: {{ section.settings.bg_color }};
  padding: 80px 20px;
}

.honeypot-container {
  max-width: 1200px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 60px;
  align-items: center;
}

.honeypot-content h2 {
  font-size: 32px;
  margin-bottom: 16px;
  color: {{ section.settings.heading_color }};
}

.honeypot-content p {
  font-size: 16px;
  line-height: 1.6;
  color: {{ section.settings.text_color }};
  max-width: 420px;
}

.honeypot-form {
  max-width: 420px;
}

.honeypot-field {
  position: relative;
  margin-bottom: 20px;
}

.honeypot-field input {
  width: 100%;
  padding: 14px 44px 14px 14px;
  border: none;
  border-bottom: 1px solid #ccc;
  background: transparent;
  font-size: 15px;
}

.honeypot-field input:focus {
  outline: none;
  border-bottom-color: {{ section.settings.button_color }};
  box-shadow:none
}

.honeypot-field svg {
  position: absolute;
  right: 10px;
  top: 50%;
  transform: translateY(-50%);
  width: 18px;
  opacity: 0.6;
}

.honeypot-submit {
  margin-top: 30px;
}

.honeypot-submit button {
  padding: 14px 36px;
  border: 1px solid {{ section.settings.button_color }};
  background: transparent;
  color: {{ section.settings.button_color }};
  font-size: 14px;
  letter-spacing: 1px;
  cursor: pointer;
  transition: all 0.3s ease;
}

.honeypot-submit button:hover {
  background: {{ section.settings.button_color }};
  color: #fff;
}

@media (max-width: 768px) {
  .honeypot-container {
    grid-template-columns: 1fr;
    gap: 0px;
  }

  .honeypot-content h2 {
    font-size: 32px;
  }
  .honeypot-wrapper {
    padding: 20px 20px;
  }
}
{% endstyle %}

<section class="honeypot-wrapper">
  <div class="honeypot-container">

    <div class="honeypot-content">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.description }}</p>
    </div>

    <div class="honeypot-form">
   {% form 'customer', id: 'HoneypotClubForm' %}
  <input type="hidden" name="contact[tags]" value="honeypot-club">

  {% if section.settings.show_phone %}
  <div class="honeypot-field">
    <input
      type="tel"
      name="contact[phone]"
      placeholder="{{ section.settings.phone_placeholder }}"
    >
  </div>
  {% endif %}

  <div class="honeypot-field">
    <input
      type="email"
      name="contact[email]"
      placeholder="{{ section.settings.email_placeholder }}"
      required
    >
  </div>

  <div class="honeypot-submit">
    <button type="submit">
      {{ section.settings.button_text }}
    </button>
  </div>

{% endform %}

    </div>

  </div>
</section>


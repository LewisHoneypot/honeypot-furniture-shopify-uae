<section class="honeypot-hero-section color-background gradient">

  {% if section.settings.image %}
    <div 
      class="honeypot-hero-bg"
      style="background-image: url('{{ section.settings.image | image_url: width: 2500 }}');">
    </div>
  {% endif %}

  <div class="honeypot-hero-content page-width">

    <div class="honeypot-text-box">

      <h2 class="honeypot-intro">{{ section.settings.intro_text }}</h2>
      <h2 class="honeypot-heading">{{ section.settings.heading }}</h2>
      <h3 class="honeypot-subheading">{{ section.settings.subheading }}</h3>

      <p class="honeypot-description">{{ section.settings.paragraph_one }}</p>
      <p class="honeypot-description">{{ section.settings.paragraph_two }}</p>
      <p class="honeypot-description">{{ section.settings.paragraph_three }}</p>
      <p class="honeypot-description">{{ section.settings.paragraph_four }}</p>

      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="button honeypot-button">
          {{ section.settings.button_label }}
        </a>
      {% endif %}

    </div>
  </div>

</section>

{% render 'guarantee-strip', text_1: section.settings.text_1, text_2: section.settings.text_2, text_3: section.settings.text_3 %}


<style>
/* Full section wrapper */
.honeypot-hero-section {
  position: relative;
  width: 100%;
  height: 1250px;
  overflow: hidden;
}

/* Full-width background image */
.honeypot-hero-bg {
  position: absolute;
  inset: 0;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  z-index: 1;
}

/* Right-side content container */
.honeypot-hero-content {
  position: relative;
  z-index: 2;
  height: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

/* White translucent box */
.honeypot-text-box {
  background: rgba(255, 255, 255, 0.88);
  backdrop-filter: blur(4px);
  padding: 50px 60px;
  max-width: 520px;
  border-radius: 4px;
}

/* Typography */
.honeypot-intro {
  text-transform: uppercase;
  letter-spacing: 1px;
  margin-bottom: 0.4rem;
}

.honeypot-heading {
  font-size: 2rem;
  font-weight: 400;
  margin-bottom: 0.6rem;
  line-height: 1.3;
  color: #111;
}

.honeypot-subheading {
  font-size: 1.2rem;
  font-weight: 500;
  color: #333;
  margin-bottom: 1.5rem;
}

.honeypot-description {
  font-size: 1.05rem;
  color: #333;
  line-height: 1.6;
  margin-bottom: 1rem;
}

/* Button */
.honeypot-button {
  display: inline-block;
  text-transform: uppercase;
  font-weight: 600;
  letter-spacing: 0.5px;
  padding: 1.2rem 2rem;
  border-radius: 0;
  background-color: #a47b45;
  color: #fff;
  text-decoration: none;
  transition: 0.3s;
}

.honeypot-button:hover {
  background-color: #8c6b38;
}

/* Mobile Responsive */
@media (max-width: 990px) {
  .honeypot-hero-section {
    height: auto;
  }

  .honeypot-hero-content {
    justify-content: center;
    padding: 20px;
  }

  .honeypot-text-box {
    width: 100%;
    padding: 30px;
    margin-top: -40px;
  }
}
</style>


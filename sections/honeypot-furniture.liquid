    { "type": "text", "id": "heading", "label": "Main Heading", "default": "Honeypot Furniture" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "Designs Made for You." },
    { "type": "textarea", "id": "paragraph_one", "label": "Paragraph 1", "default": "At Honeypot, we believe furniture should fit your life, not the other way around." },
    { "type": "textarea", "id": "paragraph_two", "label": "Paragraph 2", "default": "Built with solid wood frames, premium fabrics, and fine craftsmanship." },
    { "type": "textarea", "id": "paragraph_three", "label": "Paragraph 3", "default": "With over 15 years of expertise in creating comfort and style." },
    { "type": "textarea", "id": "paragraph_four", "label": "Paragraph 4", "default": "Now bringing our signature craftsmanship to the UAE." },
    { "type": "text", "id": "button_label", "label": "Button Label", "default": "Learn More" },

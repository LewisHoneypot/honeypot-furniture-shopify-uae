                        <span class="h4 m-0{% if block.settings.layout == 'horizontal' %} f-column{% endif %}">
                          {{- block.settings.heading_2 -}}
                        </span>
                      </li>
                    {%- endif -%}
                    {%- if block.settings.heading_3 != blank -%}
                      <li class="icon-with-text__item d-flex a-i-center{% if block.settings.layout == 'horizontal' %} f-column{% endif %}">
                        {%- if block.settings.image_3 == null -%}
                          {% render 'icon-accordion', icon: block.settings.icon_3 -%}
                        {%- else -%}
                          <img
                            src="{{ block.settings.image_3 | image_url }}"
                            {% if block.settings.image_3.alt != blank %}
                              alt="{{ block.settings.image_3.alt | escape }}"
                            {% else %}
                              role="presentation"

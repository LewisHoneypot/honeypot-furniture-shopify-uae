                          <span class="product__info--name">
                            {{ 'products.product.information.sku' | t }}
                          </span>
                          <span class="product__info--value" id="Sku-{{ section.id }}" role="status">
                            {{ product.selected_or_first_available_variant.sku }}
                          </span>

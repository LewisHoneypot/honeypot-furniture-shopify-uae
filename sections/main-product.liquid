          {%- if section.settings.image_tech == "cylindo" -%}
            {% render 'product-media-gallery-cylindo',
              product: product,
              gallery_layout: section.settings.gallery_layout,
              media_size: section.settings.media_size,
              enable_video_looping: section.settings.enable_video_looping,
              type_style: section.settings.type_style,
              show_product_badges: section.settings.show_product_badges,
              carousel_direction: section.settings.carousel_direction,
              carousel_gap_tablet: section.settings.carousel_gap_tablet,
              carousel_gap_desktop: section.settings.carousel_gap_desktop,
              ratio_square: section.settings.image_ratio
            %}
          {%- else -%}
            {% render 'product-media-gallery',
              product: product,
              gallery_layout: section.settings.gallery_layout,
              media_size: section.settings.media_size,
              enable_video_looping: section.settings.enable_video_looping,
              type_style: section.settings.type_style,
              show_product_badges: section.settings.show_product_badges,
              carousel_direction: section.settings.carousel_direction,
              carousel_gap_tablet: section.settings.carousel_gap_tablet,
              carousel_gap_desktop: section.settings.carousel_gap_desktop,
              ratio_square: section.settings.image_ratio
            %}
          {%- endif -%}
          
          {%- if section.settings.show_product_badges and section.settings.type_style != 'special' -%}
            {%- liquid
              if settings.badge_position == 'top left'
                assign position_class = 'top-0 left-0'
              else
                assign position_class = 'top-0 right-0'
              endif
            -%}
            <div class="product__badge pos-absolute z-index-1 d-flex f-column {{ settings.badge_position }} {{ settings.badge_transform }} {{ position_class }}">
              {%- if product.compare_at_price > product.price and product.available -%}
                <span
                  id="Badge-{{ section.id }}-{{ product.id }}"
                  class="badge sale-badge d-inline-block center break {{ settings.badge_button_type }}"
                >
                  {{- 'products.product.on_sale' | t -}}
                </span>
              {%- endif -%}
              {%- if product.available == false -%}
                <span
                  id="Badge-{{ section.id }}-{{ product.id }}"
                  class="badge sold-out-badge d-inline-block center break {{ settings.badge_button_type }}"
                >
                  {{- 'products.product.sold_out' | t -}}
                </span>
              {%- endif -%}
            </div>
          {%- endif -%}
          {%- if section.settings.enable_share and section.settings.type_style == 'classic' -%}
            <div class="product__share pos-absolute z-index-2">
              {%- liquid
                assign share_label = 'products.product.share' | t
                assign share_url = product.selected_variant.url | default: product.url | prepend: request.origin
              -%}
              {% render 'share-button', section: section, share_label: share_label, share_link: share_url %}
            </div>
          {%- endif -%}
        </div>
      {%- endif -%}
      <div class="product__info-wrapper w-100 f-grow f-shrink product-view-{{ section.settings.type_style }}{% if section.settings.type_style == 'special' %} pos-relative{% endif %}">
        <product-info
          id="ProductInfo-{{ section.id }}"
          data-section="{{ section.id }}"
          data-url="{{ product.url }}"
          class="product__info-container d-block"
        >
          {%- if section.settings.enable_share -%}
            {%- if section.settings.type_style != 'classic' -%}
              <div class="product__share pos-absolute z-index-2 top-0 right-0">
                {%- liquid
                  assign share_label = 'products.product.share' | t
                  assign share_url = product.selected_variant.url | default: product.url | prepend: request.origin
                -%}
                {% render 'share-button', section: section, share_label: share_label, share_link: share_url %}
              </div>
            {%- endif -%}
          {%- endif -%}
          {%- assign product_form_id = 'product-form-' | append: section.id -%}
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when '@app' -%}
                {% render block %}
              {%- when 'text' -%}
                <p
                  class="product__text element-spacing-all{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
                  {{ block.shopify_attributes }}
                  {% if settings.animations_reveal_on_scroll %}
                    style="
                      --animation-order: {{ forloop.index }};
                      --padding-top: {{ block.settings.padding_top }}px;
                      --padding-bottom: {{ block.settings.padding_bottom }}px;
                    "
                  {% else %}
                    style="
                      --padding-top: {{ block.settings.padding_top }}px;
                      --padding-bottom: {{ block.settings.padding_bottom }}px;
                    "
                  {% endif %}
                >
                  {{ block.settings.text }}
                </p>

              {%- when 'title' -%}
                <div class="container-fluid">
                  <div class="row">
                    <div class="col-8 col-lg-12 p-0">
                      <div
                        class="product__title break element-spacing-all float-left float-lg-none pt-0 pb-0"
                        {{ block.shopify_attributes }}
                        style="
                          --padding-top: {{ block.settings.padding_top }}px;
                          --padding-bottom: {{ block.settings.padding_bottom }}px;
                        "
                      >
                        {% comment %} Check Product title display type {% endcomment %}
                        {%- if block.settings.layout == 'v2' -%}
                          {%- if product.metafields.custom.range_name and product.metafields.custom.colour_and_model -%}
                            <h1
                              class="{% if block.settings.heading_size == 'h1' or block.settings.heading_size == 'h2' %} {{ block.settings.heading_size }}{%  else %}p-w__heading {{ block.settings.heading_size | prepend: 'heading-size-' }}{% endif %} m-0"
                              style="font-weight: {{ block.settings.font_weight }} !important; font-size: 20pt;"
                            >
                              {{ product.metafields.custom.range_name }}
                              <br>
                              <span style="font-size: 14pt; font-weight: 500; top: -10px; position: relative;">
                                {{- product.metafields.custom.colour_and_model -}}
                              </span>
                            </h1>
                          {%- endif -%}
                        {%- else -%}
                          <h1
                            class="{% if block.settings.heading_size == 'h1' or block.settings.heading_size == 'h2' %} {{ block.settings.heading_size }}{%  else %}p-w__heading {{ block.settings.heading_size | prepend: 'heading-size-' }}{% endif %} m-0"
                            style="font-weight: {{ block.settings.font_weight }} !important;"
                          >
                            {{ product.title | escape }}
                          </h1>
                        {%- endif -%}
                      </div>
                    </div>

                    {% comment %} was when price {% endcomment %}
                    <div class="col-4 col-lg-12 p-0">
                      <div
                        class="product__price element-spacing-all no-js-hidden float-right float-lg-none pt-0"
                        {{ block.shopify_attributes }}

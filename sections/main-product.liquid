{%- if section.settings.image_tech == "cylindo" -%}
  <link rel="preconnect" href="https://content.cylindo.com" crossorigin>
  <script
    type="module"
    src="https://viewer-cdn.cylindo.com/v1/index.mjs"
    async
  ></script>
  <script
    type="module"
    src="https://viewer-cdn.cylindo.com/v1/shopify.mjs"
    async
  ></script>

  {%- if section.settings.cylindo_thumbnail_bar == "on" -%}
    <script
      type="module"
      src="https://viewer-cdn.cylindo.com/v1/bar.mjs"
      async
    ></script>
  {%- endif -%}
  
{%- endif -%}

<section
  id="MainProduct-{{ section.id }}"
  data-section="{{ section.id }}"
  class="section__m-product spacing spacing-xs color-{{ section.settings.color_scheme }} gradient pos-relative"
  style="
    --padding-top: {{ section.settings.padding_top }}px;
    --padding-bottom: {{ section.settings.padding_bottom }}px;
    --padding-top-xs: {{ section.settings.padding_top_mobile }}px;
    --padding-bottom-xs: {{ section.settings.padding_bottom_mobile }}px;
  "
>
  {%- liquid
    assign first_threed_model = product.media | where: 'media_type', 'model' | first
    capture icon_caret
      render 'icon-caret'
    endcapture
  -%}

  {{ 'section-main-product.css' | asset_url | stylesheet_tag }}
  {%- if first_threed_model -%}
    <link
      id="ModelViewerStyle"
      rel="stylesheet"
      href="https://cdn.shopify.com/shopifycloud/model-viewer-ui/assets/v1.0/model-viewer-ui.css"
      media="print"
      onload="this.media='all'"
    >
    <link
      id="ModelViewerOverride"
      rel="stylesheet"
      href="{{ 'component-model-viewer-ui.css' | asset_url }}"
      media="print"
      onload="this.media='all'"
    >
  {%- endif -%}
  <div class="page-width m-auto">
    {% render 'breadcrumb', padding_top: '2rem', padding_bottom: '4rem', alignment: 'start' %}
    <div
      class="product product--{{ section.settings.media_size }} product--{{ section.settings.gallery_layout }} product--style-{{ section.settings.type_style }} d-flex f-wrap{% if product.media.size == 0 %} product--no-media m-auto{% endif %} r-gap"
      {% comment %} style="--r-gap: 3rem;" {% endcomment %}
    >
      {%- if section.settings.use_custom_title == true -%}
        <div class="container-fluid">
          <div class="row">
            <div class="col-12 p-0">
              <div class="product__title break element-spacing-all float-left float-lg-none pt-0 pb-0">
                {%- if product.metafields.custom.range_name and product.metafields.custom.colour_and_model -%}
                  <h1
                    style="
                      font-weight: normal;
                      font-size: 24pt;
                      margin-top: 15px;
                      margin-bottom: 0px;
                      font-weight: bold;
                      line-height: 26pt;
                    "
                  >
                    {{ product.metafields.custom.range_name }}
                    <br>
                    <span
                      style="
                        font-size: 14pt;
                        font-weight: 500;
                        top: -11px;
                        position: relative;
                        line-height: 17pt;
                      "
                    >
                      {{ product.metafields.custom.colour_and_model }}
                    </span>
                  </h1>
                {%- else %}
                  <h1
                    style="
                      font-weight: normal;
                      font-size: 18pt;
                      margin-bottom: 0px;
                      font-weight: bold;
                    "
                  >
                    {{ product.title | escape }}
                  </h1>
                {%- endif -%}
              </div>
            </div>
          </div>
        </div>
      {%- endif -%}


              {%- when 'complementary' -%}
                <product-recommendations
                  class="complementary-products d-block element-spacing-all no-js-hidden{% if block.settings.enable_quick_add %} complementary-products-contains-quick-add{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
                  data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ product.id }}&limit={{ block.settings.product_list_limit }}&intent=complementary"
                  {{ block.shopify_attributes }}

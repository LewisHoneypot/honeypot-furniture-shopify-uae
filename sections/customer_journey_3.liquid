<!-- sections/tailored-quote.liquid -->
<section class="tailored-quote">
  <div class="container">
    <!-- Heading -->
    <div class="quote-heading">
      <h2><span>{{ section.settings.step_number }}</span><br>{{ section.settings.heading }}</h2>
      {% if section.settings.subtext_1 != blank %}
        <p>{{ section.settings.subtext_1 }}</p>
      {% endif %}
      {% if section.settings.subtext_2 != blank %}
        <p>{{ section.settings.subtext_2 }}</p>
      {% endif %}
      {% if section.settings.subtext_3 != blank %}
        <p>{{ section.settings.subtext_3 }}</p>
      {% endif %}
    </div>

    <!-- Table -->
    <div class="quote-table-wrapper">
      <table class="quote-table">
        <thead>
          <tr>
            <th>Options</th>
            {% for col in section.blocks %}
              {% if col.type == 'column' %}
                <th class="{{ col.settings.bg_color }}">{{ col.settings.title }}</th>
              {% endif %}
            {% endfor %}
          </tr>
        </thead>
        <tbody>
       {% for row in section.blocks %}
  {% if row.type == 'row' %}
    <tr>
      <td class="{{ row.settings.bg_color }}">{{ row.settings.option_name }}</td>
      {% for i in (1..5) %}
        {% assign key = 'price_' | append: i %}
        <td>{% if row.settings[key] != blank %}{{ row.settings[key] }}{% endif %}</td>
      {% endfor %}
    </tr>
  {% endif %}
{% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</section>

<style>
.tailored-quote {
  padding: 60px 0;
  font-family: Arial, sans-serif;
}

.tailored-quote .container {
  max-width: 1100px;
  margin: 0 auto;
  padding: 0 15px;
}

.tailored-quote .quote-heading h2 {
  font-size: 32px;
  font-weight: bold;
  margin-bottom: 15px;
  line-height: 1.4;
}

.tailored-quote .quote-heading h2 span {
  font-size: 28px;
  font-weight: 700;
  display: block;
  margin-bottom: 5px;
}

.tailored-quote .quote-heading p {
  margin-bottom: 12px;
  font-size: 16px;
  line-height: 1.6;
}

.quote-table-wrapper {
  margin-top: 30px;
  overflow-x: auto;
}

.quote-table {
  width: 100%;
  border-collapse: collapse;
  text-align: center;
  font-size: 16px;
}

.quote-table th,
.quote-table td {
  border: 1px solid #ddd;
  padding: 15px;
  font-weight: 500;
}

.quote-table th {
  background: #f9f9f9;
  font-weight: bold;
}

.quote-table td:first-child {
  font-weight: bold;
  text-align: left;
}

/* Background color options */
.bg-yellow { background: #ffffa5; }
.bg-gray { background: #cfcfcf; }
.bg-blue { background: #9ebeff; }
.bg-orange { background: #ffcf94; }
.bg-green { background: #b9f3b2; }
.bg-beige { background: #f9e2cc; }
.bg-light-yellow { background: #fff1cc; }

/* Responsive */
@media (max-width: 768px) {
  .quote-table th, .quote-table td {
    font-size: 14px;
    padding: 10px;
  }
}
</style>

{% schema %}
{
  "name": "customer journey 3",
  "settings": [
    {
      "type": "text",
      "id": "step_number",
      "label": "Step Number",
      "default": "03"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Get a Tailored Quote"
    },
    {
      "type": "textarea",
      "id": "subtext_1",
      "label": "Subtext Line 1",
      "default": "Your style and size choices lead straight to a clear, Upfront price that covers both filling options and all five fabric categories."
    },
    {
      "type": "textarea",
      "id": "subtext_2",
      "label": "Subtext Line 2",
      "default": "We provide a price for every fabric so you can see exactly which options fit your budget!"
    },
    {
      "type": "textarea",
      "id": "subtext_3",
      "label": "Subtext Line 3",
      "default": "This transparency lets you explore options confidently and avoid surprises."
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Table Column",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Column Title"
        },
        {
          "type": "select",
          "id": "bg_color",
          "label": "Background Color",
          "options": [
            { "value": "bg-yellow", "label": "Yellow" },
            { "value": "bg-gray", "label": "Gray" },
            { "value": "bg-blue", "label": "Blue" },
            { "value": "bg-orange", "label": "Orange" },
            { "value": "bg-green", "label": "Green" }
          ],
          "default": "bg-yellow"
        }
      ]
    },
    {
      "type": "row",
      "name": "Table Row",
      "settings": [
        {
          "type": "text",
          "id": "option_name",
          "label": "Row Title (Option)"
        },
        {
          "type": "select",
          "id": "bg_color",
          "label": "Row Background",
          "options": [
            { "value": "bg-beige", "label": "Beige" },
            { "value": "bg-light-yellow", "label": "Light Yellow" }
          ]
        },
        {
          "type": "text",
          "id": "price_1",
          "label": "Price for Column 1"
        },
        {
          "type": "text",
          "id": "price_2",
          "label": "Price for Column 2"
        },
        {
          "type": "text",
          "id": "price_3",
          "label": "Price for Column 3"
        },
        {
          "type": "text",
          "id": "price_4",
          "label": "Price for Column 4"
        },
        {
          "type": "text",
          "id": "price_5",
          "label": "Price for Column 5"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "customer journey 3"
    }
  ]
}
{% endschema %}

<!-- sections/tailored-quote.liquid -->
<section class="tailored-quote-section" style="
  background-color: {{ section.settings.background_color }};
  padding: {{ section.settings.section_padding_top }}px {{ section.settings.section_padding_sides }}px {{ section.settings.section_padding_bottom }}px {{ section.settings.section_padding_sides }}px;
  margin-top: {{ section.settings.section_margin_top }}px;
  margin-bottom: {{ section.settings.section_margin_bottom }}px;
">
  <div class="container">
    <!-- Top Content - Centered -->
    <div class="tailored-quote-header" style="text-align: center;">
      <div class="section-number" style="margin-bottom: {{ section.settings.number_margin_bottom }}px;">
        <h2 style="
          color: {{ section.settings.number_color }};
          font-size: {{ section.settings.number_font_size }}px;
          font-weight: {{ section.settings.number_font_weight }};
          margin: 0;
        ">{{ section.settings.number }}</h2>
      </div>
      <div class="section-heading" style="margin-bottom: {{ section.settings.heading_margin_bottom }}px;">
        <h3 style="
          color: {{ section.settings.heading_color }};
          font-size: {{ section.settings.heading_font_size }}px;
          font-weight: {{ section.settings.heading_font_weight }};
          margin: 0;
        ">{{ section.settings.heading }}</h3>
      </div>
      <div class="section-text" style="
        max-width: {{ section.settings.text_max_width }}px;
        margin: 0 auto;
      ">
        <div style="
          color: {{ section.settings.text_color }};
          font-size: {{ section.settings.text_font_size }}px;
          line-height: {{ section.settings.text_line_height }};
          text-align: center;
        ">{{ section.settings.paragraph }}</div>
      </div>
    </div>

    <!-- Table - Centered -->
    <div class="quote-table-wrapper" style="
      margin-top: {{ section.settings.table_margin_top }}px;
      text-align: center;
    ">
      <table class="quote-table" style="
        margin: 0 auto;
        font-size: {{ section.settings.table_font_size }}px;
        border: {{ section.settings.table_border_width }}px solid {{ section.settings.table_border_color }};
      ">
        <thead>
          <tr>
            <th style="
              background-color: {{ section.settings.table_header_bg }};
              color: {{ section.settings.table_header_text }};
              font-size: {{ section.settings.table_header_font_size }}px;
              font-weight: {{ section.settings.table_header_font_weight }};
              padding: {{ section.settings.table_cell_padding }}px;
            ">{{ section.settings.option_header }}</th>
            {% for column in section.blocks %}
              {% if column.type == 'column' %}
                <th style="
                  background-color: {{ column.settings.column_color }};
                  color: {{ section.settings.table_header_text }};
                  font-size: {{ section.settings.table_header_font_size }}px;
                  font-weight: {{ section.settings.table_header_font_weight }};
                  padding: {{ section.settings.table_cell_padding }}px;
                ">{{ column.settings.column_title }}</th>
              {% endif %}
            {% endfor %}
          </tr>
        </thead>
        <tbody>
          {% for row in section.blocks %}
            {% if row.type == 'row' %}
              <tr>
                <td style="
                  background-color: {{ row.settings.row_color }};
                  color: {{ section.settings.table_text_color }};
                  font-weight: {{ section.settings.table_row_header_font_weight }};
                  padding: {{ section.settings.table_cell_padding }}px;
                  text-align: left;
                ">{{ row.settings.row_title }}</td>
                {% for column in section.blocks %}
                  {% if column.type == 'column' %}
                    {% assign price_index = forloop.index %}
                    {% if price_index == 1 and row.settings.price_1 != blank %}
                      <td style="
                        color: {{ section.settings.table_text_color }};
                        padding: {{ section.settings.table_cell_padding }}px;
                      ">{{ row.settings.price_1 }}</td>
                    {% elsif price_index == 2 and row.settings.price_2 != blank %}
                      <td style="
                        color: {{ section.settings.table_text_color }};
                        padding: {{ section.settings.table_cell_padding }}px;
                      ">{{ row.settings.price_2 }}</td>
                    {% elsif price_index == 3 and row.settings.price_3 != blank %}
                      <td style="
                        color: {{ section.settings.table_text_color }};
                        padding: {{ section.settings.table_cell_padding }}px;
                      ">{{ row.settings.price_3 }}</td>
                    {% else %}
                      <td style="
                        color: {{ section.settings.table_text_color }};
                        padding: {{ section.settings.table_cell_padding }}px;
                      ">-</td>
                    {% endif %}
                  {% endif %}
                {% endfor %}
              </tr>
            {% endif %}
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</section>

<style>
.tailored-quote-section .container {
  max-width: {{ section.settings.container_max_width }}px;
  margin: 0 auto;
}

.quote-table {
  width: 100%;
  border-collapse: collapse;
  text-align: center;
}

.quote-table th,
.quote-table td {
  border: 1px solid #565656;
  text-align:center !important;
    font-family: 'Albert Sans', sans-serif;
  color:#171717;
}

.quote-table-wrapper {
  overflow-x: auto;
    max-width: 900px;
    margin: auto;
}

/* Responsive */
@media (max-width: 768px) {
  .tailored-quote-section {
    padding: 20px 15px !important;
  }
   .section-number h2{
  font-size:24px !important;
  }
  .quote-table th, 
  .quote-table td {
    padding: 8px !important;
    font-size: 12px !important;
  }
.section-heading h3 {
  font-size:20px !important;
  }
  .fabric-title {
    font-size: 20px;
}
.fabric-step {
    font-size: 24px;
}
.fabric-name {
    font-size: 18px;
    margin-top: 10px;
    margin-bottom: 0;
}
  .quote-table {
    overflow: hidden;
}
}
</style>


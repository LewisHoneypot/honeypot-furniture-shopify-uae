          "default": "Premium natural feathers for an ultra-soft, plush feel."
        },
        {
          "type": "text",
          "id": "balanced_label",
          "label": "Balanced Label",
          "default": "BALANCED"
        },
        {
          "type": "textarea",
          "id": "balanced",
          "label": "Balanced Text",
          "default": "A harmonious blend of plush feather and supportive biscuit foam."
        },
        {
          "type": "text",
          "id": "support_label",
          "label": "Support Label",
          "default": "SUPPORT"
        },
        {
          "type": "textarea",
          "id": "support",
          "label": "Support Text",
          "default": "Firmer seating that retains its shape beautifully."
        },
        {
          "type": "checkbox",
          "id": "active",
          "label": "Active by Default",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Comfort Comparison",
      "blocks": [
        { "type": "comfort" },
        { "type": "comfort" }
      ]
    }
  ]
}
{% endschema %}
<!-- sections/customise-size.liquid -->
<section class="customise-size-section">
  <div class="container">

    <!-- Top Content -->
    <div class="customise-size-header">
      <div class="section-number">
        <h2>{{ section.settings.number }}</h2>
      </div>
      <div class="section-heading">
        <h3>{{ section.settings.heading }}</h3>
      </div>
      <div class="section-subheading">
        <h4>{{ section.settings.subheading }}</h4>
      </div>
      <div class="section-text">
        <p>{{ section.settings.paragraph }}</p>
      </div>
    </div>

    <!-- Shape Images -->
    <div class="customise-shapes">
      {% for block in section.blocks %}
        {% if block.type == 'shape_image' %}
          <div class="shape-image">
            <img src="{{ block.settings.image | img_url: '600x' }}" alt="shape image">
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- Middle Description -->
    <div class="customise-desc">
      <p>{{ section.settings.middle_text }}</p>
    </div>

    <!-- Bottom Section -->
    <div class="customise-bottom">
      <!-- Left Text -->
      <div class="customise-bottom-left">
        <h4>{{ section.settings.measurements_title }}</h4>
        <div class="measurement-lists">
          <ul>
            {% for block in section.blocks %}
              {% if block.type == 'list_item' and forloop.index <= 5 %}
                <li>{{ block.settings.text }}</li>
              {% endif %}
            {% endfor %}
          </ul>
          <ul>
            {% for block in section.blocks %}
              {% if block.type == 'list_item' and forloop.index > 5 %}
                <li>{{ block.settings.text }}</li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
        <p class="note-text">{{ section.settings.note }}</p>
      </div>

      <!-- Right Image -->
      <div class="customise-bottom-right">
        {% if section.settings.main_image != blank %}
          <img src="{{ section.settings.main_image | img_url: '800x' }}" alt="main image">
        {% endif %}
      </div>
    </div>

  </div>
</section>

<style>
.customise-size-section {
  padding: 50px 20px;
}
.container {
  max-width: 1200px;
  margin: 0 auto;
}
.section-number h2 {
  font-size: 28px;
  font-weight: 600;
  margin: 0 0 8px 0;
}
.section-heading h3 {
  font-size: 24px;
  font-weight: 700;
  margin: 0 0 10px 0;
}
.section-subheading h4 {
  font-size: 18px;
  font-weight: 600;
  margin: 0 0 8px 0;
}
.section-text p {
  font-size: 16px;
  color: #555;
  margin-bottom: 20px;
}
.customise-shapes {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 20px;
  margin: 20px 0;
}
.customise-shapes img {
  width: 100%;
  max-width: 150px;
  height: auto;
}
.customise-desc p {
  font-size: 16px;
  margin: 20px 0;
  color: #444;
  text-align: center;
}
.customise-bottom {
  display: flex;
  justify-content: space-between;
  gap: 40px;
  align-items: flex-start;
  margin-top: 30px;
}
.customise-bottom-left {
  flex: 1;
}
.customise-bottom-left h4 {
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 15px;
}
.measurement-lists {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20px;
  margin-bottom: 15px;
}
.measurement-lists ul {
  padding-left: 20px;
  margin: 0;
}
.measurement-lists li {
  font-size: 15px;
  margin-bottom: 8px;
  list-style-type: disc;
}
.note-text {
  font-size: 14px;
  color: #666;
  margin-top: 10px;
}
.customise-bottom-right {
  flex: 1;
  text-align: center;
}
.customise-bottom-right img {
  width: 100%;
  height: auto;
  max-width: 400px;
  margin: 0 auto;
}

/* Responsive */
@media (max-width: 768px) {
  .customise-bottom {
    flex-direction: column;
    gap: 20px;
  }
  .measurement-lists {
    grid-template-columns: 1fr;
  }
  .customise-shapes img {
    max-width: 120px;
  }
}
</style>

{% schema %}
{
  "name": "Customer Journey 2 ",
  "settings": [
    {
      "type": "text",
      "id": "number",
      "label": "Section Number",
      "default": "02"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Customise Your Size"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Create any shape:"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Paragraph",
      "default": "L-shape, U-shape, 3 Seater, 4 Seater, 5 Seater â€“ anything you need."
    },
    {
      "type": "textarea",
      "id": "middle_text",
      "label": "Middle Text",
      "default": "Specify every detail from seat depth and armrest width, to backrest height so your sofa fits your space and design perfectly."
    },
    {
      "type": "text",
      "id": "measurements_title",
      "label": "Measurements Title",
      "default": "Measurements you can tailor include:"
    },
    {
      "type": "textarea",
      "id": "note",
      "label": "Note",
      "default": "No awkward gaps, no wasted space!"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Measurement Image"
    }
  ],
  "blocks": [
    {
      "type": "shape_image",
      "name": "Shape Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Shape Image"
        }
      ]
    },
    {
      "type": "list_item",
      "name": "Measurement Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Customer Journey 2 - Customise Size",
      "category": "Custom"
    }
  ]
}
{% endschema %}

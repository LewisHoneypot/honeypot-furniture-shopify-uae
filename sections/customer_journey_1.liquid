<!-- sections/choose-style.liquid -->
<section class="choose-style-section">
  <div class="container choose-style-grid">
    
    <!-- Left Side -->
    <div class="choose-style-left">
      <!-- Number -->
      <div class="section-number">
        <h2>{{ section.settings.number }}</h2>
      </div>

      <!-- Heading -->
      <div class="section-heading">
        <h3>{{ section.settings.heading }}</h3>
      </div>

      <!-- Paragraph -->
      <div class="section-text">
        <p>{{ section.settings.paragraph }}</p>
      </div>

      <!-- Bottom Images (Left Side) -->
      <div class="choose-style-images">
        {% for block in section.blocks limit:2 %}
          <div class="style-image">
            <img src="{{ block.settings.image | img_url: '600x' }}" alt="style image">
          </div>
        {% endfor %}
      </div>
    </div>

    <!-- Right Side -->
    <div class="choose-style-right">
      <!-- Top Images (Right Side) -->
      <div class="choose-style-images">
        {% for block in section.blocks offset:2 limit:2 %}
          <div class="style-image">
            <img src="{{ block.settings.image | img_url: '600x' }}" alt="style image">
          </div>
        {% endfor %}
      </div>

      <!-- Extra Text -->
      <div class="choose-style-extra-text">
        <p>{{ section.settings.extra_text1 }}</p>
        <p>{{ section.settings.extra_text2 }}</p>
      </div>
    </div>

  </div>
</section>

<style>
.choose-style-section {
  padding: 50px 20px;
}
.choose-style-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 40px;
  align-items: start;
}
.section-number h2 {
  font-size: 28px;
  font-weight: 600;
  margin: 0;
}
.section-heading h3 {
  font-size: 22px;
  font-weight: 700;
  margin: 10px 0;
}
.section-text p {
  font-size: 16px;
  color: #555;
  margin-bottom: 20px;
}
.choose-style-images {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 15px;
  margin-top: 15px;
}
.choose-style-images img {
  width: 100%;
  height: auto;
  border-radius: 6px;
}
.choose-style-extra-text {
  margin-top: 20px;
}
.choose-style-extra-text p {
  font-size: 15px;
  color: #444;
  margin-bottom: 10px;
}

/* Responsive */
@media (max-width: 768px) {
  .choose-style-grid {
    grid-template-columns: 1fr;
  }
  .choose-style-images {
    grid-template-columns: 1fr;
  }
}
</style>

{% schema %}
{
  "name": "Choose Style Section",
  "settings": [
    {
      "type": "text",
      "id": "number",
      "label": "Section Number",
      "default": "01"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Choose Your Style"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Paragraph",
      "default": "Mix & Match: Adjust arm shapes, back styles, or combine elements from different sofa styles."
    },
    {
      "type": "textarea",
      "id": "extra_text1",
      "label": "Extra Text 1",
      "default": "Start with one of our base designs, or bring your own inspiration photo."
    },
    {
      "type": "textarea",
      "id": "extra_text2",
      "label": "Extra Text 2",
      "default": "Whether you prefer modern designs or a classic look, the style is entirely yours."
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Choose Image"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Choose Style Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

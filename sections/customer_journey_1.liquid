<!-- sections/choose-style.liquid -->
<section class="choose-style-section">
  <div class="container">

    <!-- Top Row -->
    <div class="choose-style-row top-row">
      <!-- Left (Text) -->
      <div class="choose-style-left text-col">
        <div class="section-number">
          <h2>{{ section.settings.number }}</h2>
        </div>
        <div class="section-heading">
          <h3>{{ section.settings.heading }}</h3>
        </div>
        <div class="section-text">
          <p>{{ section.settings.paragraph }}</p>
        </div>
      </div>

      <!-- Right (Images 1 & 2) -->
      <div class="choose-style-right image-col">
        <div class="choose-style-images">
          {% for block in section.blocks limit:2 %}
            <div class="style-image">
              <img src="{{ block.settings.image | img_url: '600x' }}" alt="style image">
            </div>
          {% endfor %}
        </div>
      </div>
    </div>

    <!-- Bottom Row -->
    <div class="choose-style-row bottom-row">
      <!-- Left (Images 3 & 4) -->
      <div class="choose-style-left image-col">
        <div class="choose-style-images">
          {% for block in section.blocks offset:2 limit:2 %}
            <div class="style-image">
              <img src="{{ block.settings.image | img_url: '600x' }}" alt="style image">
            </div>
          {% endfor %}
        </div>
      </div>

      <!-- Right (Extra Text) -->
      <div class="choose-style-right text-col">
        <div class="choose-style-extra-text">
          <p>{{ section.settings.extra_text1 }}</p>
          <p>{{ section.settings.extra_text2 }}</p>
        </div>
      </div>
    </div>

  </div>
</section>

<style>
    .choose-style-section {
  padding: 40px 20px;
      border-bottom: 2px solid #f5eee8;
    max-width: 1200px;
    margin: auto;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
}

.choose-style-row {
  display: flex;
  justify-content: space-between;
  gap: 30px;
  margin-bottom: 40px;
  align-items: center;
}

.choose-style-left,
.choose-style-right {
  flex: 1;
}

.section-number h2 {
  font-size: 35px;
  font-weight: 600;
  margin: 0 0 5px 0;
}

.section-heading h3 {
  font-size: 24px;
  font-weight: 700;
  margin: 0 0 8px 0;
}

.section-text p {
  font-size: 16px;
  color: #171717;
  margin: 0;
}

.choose-style-images {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12px;
}

.choose-style-images img {
  width: 100%;
  height: auto;
  border-radius: 6px;
  max-width: 250px;
}

.choose-style-extra-text p {
  font-size: 15px;
  color: #444;
  margin: 0 0 8px 0;
}

/* Responsive */
@media (max-width: 768px) {
  .choose-style-row {
    flex-direction: column;
    gap: 20px;
    margin-bottom: 30px;
  }

  /* Force text first, then images */
  .choose-style-row .text-col {
    order: 1;
  }

  .choose-style-row .image-col {
    order: 2;
  }

  .choose-style-images {
    {% comment %} grid-template-columns: 1fr; {% endcomment %}
  }
}

</style>

{% schema %}
{
  "name": "Customer Journey 1",
  "settings": [
    {
      "type": "text",
      "id": "number",
      "label": "Section Number",
      "default": "01"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Choose Your Style"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Paragraph",
      "default": "Mix & Match: Adjust arm shapes, back styles, or combine elements from different sofa styles."
    },
    {
      "type": "textarea",
      "id": "extra_text1",
      "label": "Extra Text 1",
      "default": "Start with one of our base designs, or bring your own inspiration photo."
    },
    {
      "type": "textarea",
      "id": "extra_text2",
      "label": "Extra Text 2",
      "default": "Whether you prefer modern designs or a classic look, the style is entirely yours."
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Choose Image"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Customer Journey 1",
      "category": "Custom"
    }
  ]
}
{% endschema %}

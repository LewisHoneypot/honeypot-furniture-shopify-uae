{% schema %}
{
  "name": "Layout Ideas",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Layout Ideas"
    }
  ],
  "blocks": [
    {
      "type": "layout_item",
      "name": "Layout Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Layout Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Layout Ideas",
      "blocks": [
        { "type": "layout_item" },
        { "type": "layout_item" },
        { "type": "layout_item" },
        { "type": "layout_item" }
      ]
    }
  ]
}
{% endschema %}

<section class="layout-ideas-section">
  <div class="page-width">
    
    {% if section.settings.heading != blank %}
      <h2 class="layout-heading">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <div class="layout-scroll-wrapper">
      {% for block in section.blocks %}
        <div class="layout-item" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            <img
              src="{{ block.settings.image | image_url: width: 500 }}"
              alt="Layout Image"
              loading="lazy"
              width="500"
              height="auto"
            >
          {% endif %}
        </div>
      {% endfor %}
    </div>

  </div>
</section>

<style>
.layout-ideas-section {
  padding: 60px 0;
  background: #f7f7f7;
}

.page-width {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.layout-heading {
  text-align: center;
  font-size: 28px;
  font-weight: 600;
  margin-bottom: 40px;
}

.layout-scroll-wrapper {
  display: flex;
  gap: 30px;
  overflow-x: auto;
  scroll-behavior: smooth;
  padding: 0 0 15px 0;
  width: 100%;
}

/* Scrollbar Styling */
.layout-scroll-wrapper::-webkit-scrollbar {
  height: 8px;
}

.layout-scroll-wrapper::-webkit-scrollbar-track {
  background: #e0e0e0;
  border-radius: 10px;
}

.layout-scroll-wrapper::-webkit-scrollbar-thumb {
  background: #999;
  border-radius: 10px;
}

.layout-scroll-wrapper::-webkit-scrollbar-thumb:hover {
  background: #666;
}

.layout-item {
  flex: 0 0 calc(25% - 22.5px);
  min-width: 220px;
  text-align: center;
}

.layout-item img {
  width: 100%;
  height: 280px;
  object-fit: cover;
  border-radius: 8px;
  transition: transform 0.3s ease;
}

.layout-item img:hover {
  transform: scale(1.05);
}

/* Tablet optimization */
@media (max-width: 1024px) {
  .layout-item {
    flex: 0 0 calc(33.333% - 20px);
    min-width: 180px;
  }

  .layout-item img {
    height: 240px;
  }

  .layout-heading {
    font-size: 24px;
  }
}

/* Mobile optimization */
@media (max-width: 768px) {
  .layout-ideas-section {
    padding: 40px 0;
  }

  .page-width {
    padding: 0 15px;
  }

  .layout-scroll-wrapper {
    gap: 20px;
  }

  .layout-item {
    flex: 0 0 calc(50% - 10px);
    min-width: 150px;
  }

  .layout-item img {
    height: 200px;
  }

  .layout-heading {
    font-size: 20px;
    margin-bottom: 30px;
  }
}

@media (max-width: 480px) {
  .layout-item {
    flex: 0 0 calc(50% - 10px);
    min-width: 140px;
  }

  .layout-item img {
    height: 180px;
  }

  .layout-heading {
    font-size: 18px;
    margin-bottom: 20px;
  }
}
</style>

{% stylesheet %}
.why-honeypot {
  padding: 80px 20px;
  background: #faf9f7;
}

.why-honeypot__container {
  max-width: 1200px;
  margin: auto;
}

.why-honeypot__header {
  text-align: center;
  margin-bottom: 50px;
}

.why-honeypot__header h2 {
  font-size: 36px;
  margin-bottom: 10px;
  font-weight: bold ;
}

.why-honeypot__header p {
  color: #6f6f6f;
  max-width: 650px;
  margin: auto;
}

.why-honeypot__tabs {
  display: flex;
  justify-content: center;
  gap: 30px;
  border-bottom: 1px solid #ddd;
  margin-bottom: 50px;
  flex-wrap: wrap;
}

.why-honeypot__tab {
  cursor: pointer;
  padding: 12px 0;
  font-weight: 500;
  position: relative;
}
.why-honeypot__tab.active {
  font-weight: bold;
}
.why-honeypot__tab.active::after {
  content: '';
  position: absolute;
  bottom: -1px;
  left: 0;
  width: 100%;
  height: 2px;
  background: #c9a46a;
}

.why-honeypot__content {
  display: none;
  grid-template-columns: 1fr 1fr;
  gap: 50px;
  align-items: center;
}

.why-honeypot__content.active {
  display: grid;
  font-weight: bold;
  color: red
}

.why-honeypot__image img {
  width: 100%;
  border-radius: 6px;
}

.why-honeypot__text h3 {
  font-size: 26px;
  margin-bottom: 15px;
}

.why-honeypot__text p {
  color: #555;
  margin-bottom: 25px;
}

.why-honeypot__btn {
  display: inline-block;
  padding: 12px 28px;
  border: 1px solid #000;
  color: #000;
  text-decoration: none;
  font-size: 14px;
}

@media (max-width: 768px) {
  .why-honeypot__content {
    grid-template-columns: 1fr;
    text-align: center;
  }
  .why-honeypot__image {
    display: none;
  }

  .why-honeypot__tabs {
    gap: 15px;
  }
}
{% endstylesheet %}

<section class="why-honeypot">
  <div class="why-honeypot__container">
    
    <div class="why-honeypot__header">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subheading }}</p>
    </div>

       <div class="why-honeypot__header">
      <h2>{{ section.settings.Mainheading }}</h2>
    </div>



    <div class="why-honeypot__tabs">
      {% for block in section.blocks %}
        <div
          class="why-honeypot__tab {% if forloop.first %}active{% endif %}"
          data-tab="tab-{{ forloop.index }}"
        >
          {{ block.settings.tab_title }}
        </div>
      {% endfor %}
    </div>

    {% for block in section.blocks %}
      <div
        class="why-honeypot__content {% if forloop.first %}active{% endif %}"
        id="tab-{{ forloop.index }}"
      >
        <div class="why-honeypot__image">
          {% if block.settings.image %}
            <img src="{{ block.settings.image | image_url: width: 800 }}" alt="">
          {% endif %}
        </div>

        <div class="why-honeypot__text">
          <h3>{{ block.settings.heading }}</h3>
          <p>{{ block.settings.content }}</p>
          {% if block.settings.button_label != blank %}
            <a href="{{ block.settings.button_link }}" class="why-honeypot__btn">
              {{ block.settings.button_label }}
            </a>
          {% endif %}
        </div>
      </div>
    {% endfor %}

  </div>
</section>

{% javascript %}
document.addEventListener('DOMContentLoaded', function () {
  const tabs = document.querySelectorAll('.why-honeypot__tab');
  const contents = document.querySelectorAll('.why-honeypot__content');

  tabs.forEach(tab => {
    tab.addEventListener('click', () => {
      const target = tab.dataset.tab;

      tabs.forEach(t => t.classList.remove('active'));
      contents.forEach(c => c.classList.remove('active'));

      tab.classList.add('active');
      document.getElementById(target).classList.add('active');
    });
  });
});
{% endjavascript %}


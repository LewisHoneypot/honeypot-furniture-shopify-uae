<style>

    .sofa-dimensions-section {
  padding: 20px;
  background: #f9f9f9;
}

.section-header {
  margin-bottom: 48px;
}

.preheading {
  font-size: 16px;
  font-weight: 500;
  color: #171717;
  max-width: 820px;
  margin: 0 auto;
  line-height: 1.5;
}

.features-grid {
width: 80%;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
      gap: 20px 25px;
  max-width: 1200px;
  margin: 0 auto 70px;
  justify-items: center;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 12px;
  background: white;
  border: 2px solid #e5e5e5;
  border-radius: 5px;
  padding: 16px 28px 16px 24px;
  font-weight: 600;
  color: #333;
  min-width: 220px;
  transition: all 0.22s ease;
  box-shadow: 0 3px 12px rgba(0,0,0,0.05);
  border: 1px solid #CEAD8E;
  justify-content: center;
}



.icon {
  font-size: 1.6rem;
  line-height: 1;
  flex-shrink: 0;
}

.diagram-wrapper {
  max-width: 1200px;
  margin: 0 auto;
}

.sofa-diagram {
  max-width: 100%;
  height: auto;
  border-radius: 12px;
  box-shadow: 0 12px 36px rgba(0,0,0,0.09);
}

.no-image-notice {
  color: #dc2626;
  font-style: italic;
  margin: 50px 0;
  font-size: 1.1rem;
}

@media (max-width: 768px) {
  .features-grid {
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 16px 20px;
  }

  .feature-item {
    padding: 14px 22px;
    justify-content: center;
    font-size: 0.98rem;
  }

  .icon {
    font-size: 1.4rem;
  }
}
</style>
<div class="sofa-dimensions-section">
  <div class="container">

    <div class="section-header text-center">
      <p class="preheading">
        {{ section.settings.heading_text | default: 'Specify every detail from seat depth and armrest width, to backrest height so your sofa sits beautifully in your space:' }}
      </p>
    </div>

    <div class="features-grid">

      {% for block in section.blocks %}
        {% if block.settings.label != blank %}
          <div class="feature-item">
  <img src="{{ 'checkbtn.png' | asset_url }}" alt="check" width="14" height="14">

          <span>{{ block.settings.label }}</span>
          </div>
        {% endif %}
      {% endfor %}

    </div>

    {% if section.settings.diagram_image %}
      <div class="diagram-wrapper text-center">
        {{
          section.settings.diagram_image | image_url: width: 1200 | image_tag:
            loading: 'lazy',
            widths: '600,800,1000,1200,1400,1600',
            sizes: '(min-width: 990px) 1200px, (min-width: 750px) 90vw, 100vw',
            class: 'sofa-diagram'
        }}
      </div>
    {% endif %}

      <p style="margin-top: 40px; text-align: center; font-size: 16px; color: #171717;">
        {{ section.settings.heading_last | default: 'Specify every detail from seat depth and armrest width, to backrest height so your sofa sits beautifully in your space:' }}
      </p>

  </div>
</div>

{% schema %}
{
  "name": "Custom Sofa Dimensions",
  "tag": "section",
  "class": "section-sofa-dimensions",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading / Description text",
      "default": "Specify every detail from seat depth and armrest width, to backrest height so your sofa sits beautifully in your space:"
    },
    {
      "type": "text",
      "id": "heading_last",
      "label": "Last Heading / Description text",
      "default": "No awkward gaps, no wasted space. Just perfect proportions."
    },
    {
      "type": "image_picker",
      "id": "diagram_image",
      "label": "Sofa dimension diagram image",
      "info": "Upload the annotated diagram with measurements and lines"
    }
  ],
  "blocks": [
    {
      "type": "dimension",
      "name": "Dimension Item",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label text",
          "default": "Length"
        }
   
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Sofa Dimensions",
      "blocks": [
        {
          "type": "dimension",
          "settings": {
            "label": "Length"
         
          }
        },
        {
          "type": "dimension",
          "settings": {
            "label": "Seat Depth & Width"
          }
        },
        {
          "type": "dimension",
          "settings": {
            "label": "Floor-To-Seat Height"
          }
        },
        {
          "type": "dimension",
          "settings": {
            "label": "Floor-To-Base Height"
          }
        },
        {
          "type": "dimension",
          "settings": {
            "label": "Depth"
          }
        },
        {
          "type": "dimension",
          "settings": {
            "label": "Armrest Height & Thickness"
          }
        },
        {
          "type": "dimension",
          "settings": {
            "label": "Backrest Height & Thickness"          }
        }
      ]
    }
  ]
}
{% endschema %}
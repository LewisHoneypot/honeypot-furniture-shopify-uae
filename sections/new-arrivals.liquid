{% comment %}
  Section: New Arrivals (Dynamic from Collection)
  Displays products from a selected collection in a scrollable carousel (drag-scroll version).
{% endcomment %}

<section class="new-arrivals-section color-background gradient">
  <div class="page-width">

    <!-- Header -->
    <div class="new-arrivals-header">
      <div class="heading-wrap">
        <h2 class="new-arrivals-heading">{{ section.settings.heading }}</h2>
        <p class="new-arrivals-subtitle">{{ section.settings.subheading }}</p>
      </div>

      <!-- Arrows removed -->
    </div>

    <!-- Product Carousel -->
    {% assign collection = collections[section.settings.collection] %}
    {% if collection %}
      {% assign product_count = collection.products_count | plus: 0 %}
      {% if product_count > 0 %}
        <div class="new-arrivals-carousel">

          {% for product in collection.products %}
            {% assign words = product.title | split: " " %}
            {% assign word_count = words | size %}
            {% assign third_word = words[2] | downcase %}
            {% assign fourth_word = words[3] | downcase %}

            {% if word_count > 3 %}
              {% if fourth_word == "bed" or fourth_word == "sofa" %}
                {% assign first_line = words[0] | append: " " | append: words[1] | append: " " | append: words[2] | append: " " | append: words[3] %}
                {% assign second_line = words | slice: 4, word_count | join: " " %}
              {% elsif third_word == "bed" or third_word == "sofa" %}
                {% assign first_line = words[0] | append: " " | append: words[1] | append: " " | append: words[2] %}
                {% assign second_line = words | slice: 3, word_count | join: " " %}
              {% else %}
                {% assign first_line = words[0] | append: " " | append: words[1] %}
                {% assign second_line = words | slice: 2, word_count | join: " " %}
              {% endif %}
            {% elsif word_count > 2 %}
              {% if third_word == "bed" or third_word == "sofa" %}
                {% assign first_line = words[0] | append: " " | append: words[1] | append: " " | append: words[2] %}
                {% assign second_line = "" %}
              {% else %}
                {% assign first_line = words[0] | append: " " | append: words[1] %}
                {% assign second_line = words | slice: 2, word_count | join: " " %}
              {% endif %}
            {% elsif word_count > 1 %}
              {% assign first_line = words[0] | append: " " | append: words[1] %}
              {% assign second_line = words | slice: 2, word_count | join: " " %}
            {% else %}
              {% assign first_line = product.title %}
              {% assign second_line = "" %}
            {% endif %}

            <div class="new-arrival-item">
              <a href="{{ product.url }}" class="arrival-link">
                <img
                  src="{{ product.featured_image | image_url: width: 800 }}"
                  alt="{{ product.title | escape }}"
                  loading="lazy"
                  class="arrival-image"
                >
                <div class="arrival-info">
                  <h3 class="arrival-title">
                    <span class="title-line-upper">{{ first_line }}</span><br>
                    <span class="title-line-lower">{{ second_line }}</span>
                  </h3>
                  <span class="arrival-price">{{ product.price | money }}</span>
                </div>
              </a>
            </div>

          {% endfor %}
        </div>
      {% else %}
        <p style="text-align:center; color:#555;">No products found in this collection.</p>
      {% endif %}
    {% endif %}

    {% if section.settings.show_button %}
      <div class="text-center">
        <a href="{{ collection.url }}" class="btn-view-all">{{ section.settings.button_label }}</a>
      </div>
    {% endif %}

  </div>
</section>

<!-- Drag + Touch Scroll Script -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    document.querySelectorAll('.new-arrivals-section').forEach(section => {
      const carousel = section.querySelector('.new-arrivals-carousel');
      if (!carousel) return;

      /* ----- Mouse Drag Scroll ----- */
      let isDown = false;
      let startX;
      let scrollLeft;

      carousel.addEventListener('mousedown', e => {
        isDown = true;
        carousel.classList.add('active-drag');
        startX = e.pageX - carousel.offsetLeft;
        scrollLeft = carousel.scrollLeft;
      });

      carousel.addEventListener('mouseleave', () => {
        isDown = false;
        carousel.classList.remove('active-drag');
      });

      carousel.addEventListener('mouseup', () => {
        isDown = false;
        carousel.classList.remove('active-drag');
      });

      carousel.addEventListener('mousemove', e => {
        if (!isDown) return;
        e.preventDefault();
        const x = e.pageX - carousel.offsetLeft;
        const walk = (x - startX) * 1.5;
        carousel.scrollLeft = scrollLeft - walk;
      });

      /* ----- Mobile Touch Swipe ----- */
      let touchStartX = 0;
      let touchScrollLeft = 0;

      carousel.addEventListener('touchstart', e => {
        touchStartX = e.touches[0].pageX;
        touchScrollLeft = carousel.scrollLeft;
      });

      carousel.addEventListener('touchmove', e => {
        const x = e.touches[0].pageX;
        const walk = (x - touchStartX) * 1.4;
        carousel.scrollLeft = touchScrollLeft - walk;
      });
    });
  });
</script>

{% schema %}
{
  "name": "New Arrivals (Collection)",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "New Arrivals" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "Fresh Designs. Same Comfort Promise." },
    { "type": "collection", "id": "collection", "label": "Select Collection" },
    { "type": "checkbox", "id": "show_button", "label": "Show 'View All' button", "default": true },
    { "type": "text", "id": "button_label", "label": "Button Label", "default": "View All" }
  ],
  "presets": [
    { "name": "New Arrivals Carousel (Collection)", "category": "Custom Sections" }
  ]
}
{% endschema %}

{% stylesheet %}
.new-arrivals-section {
  padding: 80px 0;
  background-color: #F9F7F5;
  overflow: hidden;
}

/* Header */
.new-arrivals-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 1.5rem;
}

.heading-wrap {
  max-width: 70%;
}

.new-arrivals-heading {
  font-size: 1.8rem;
  font-weight: 600;
  color: #111;
  margin-bottom: 0.4rem;
}

.new-arrivals-subtitle {
  color: #777;
  font-size: 0.95rem;
  margin: 0;
}

/* Arrows removed â€” keeping CSS untouched for safety */

/* Carousel */
.new-arrivals-carousel {
  display: flex;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  gap: 1.5rem;
  padding-bottom: 10px;
  scrollbar-width: thin;
  scrollbar-color: #aaa transparent;
}
.new-arrivals-carousel::-webkit-scrollbar {
  height: 6px;
}

.new-arrival-item {
  flex: 0 0 270px !important;
  scroll-snap-align: start;
}

.arrival-image {
  width: 100%;
  height: 320px !important;
  object-fit: cover !important;
  background-color: #EEEEEE;
  border-radius: 0;
  transition: transform 0.3s ease;
}

.arrival-link {
  text-decoration: none;
  color: inherit;
}

.new-arrival-item:hover .arrival-image {
  transform: scale(1.05);
}

.arrival-info {
  padding-top: 0.8rem;
}

.arrival-title {
  font-size: 14px;
  font-weight: 400;
  margin: 0;
}

.arrival-price {
  margin-top: 1px;
  font-size: 13px;
  font-weight: 800;
  color: #000;
  text-transform: uppercase;
}

/* View All Button */
.btn-view-all {
  display: inline-block;
  margin-top: 2rem;
  padding: 8px 20px;
  background: #111;
  color: #fff;
  text-decoration: none;
  border-radius: 4px;
  font-size: 0.9rem;
}

.text-center {
  text-align: center;
  margin-top: 1.5rem;
}

/* Responsive */
@media (max-width: 1024px) {
  .new-arrival-item { flex: 0 0 calc(33.333% - 1rem); }
}
@media (max-width: 768px) {
  .new-arrival-item { flex: 0 0 calc(50% - 1rem); }
}
@media (max-width: 480px) {
  .new-arrival-item { flex: 0 0 calc(80% - 1rem); }
  .new-arrivals-header {
    flex-direction: column;
    gap: 0.5rem;
  }
}
{% endstylesheet %}

{% comment %}
  sections/sofa-type-selector.liquid
  Purpose: Step 1 - Choose sofa type with clickable cards (images + labels)
{% endcomment %}

<div class="section">
  <div class="section-title">
    <div class="h3-icon-outer">
      <div class="h3-icon-inner">01</div>
    </div>
    <div class="h3-outer">
      <h3>{{ section.settings.step1_heading | escape }}</h3>
    </div>
  </div>

  <div class="row options-1">
    {% for block in section.blocks %}
      {% if block.type == 'sofa_type' %}
        <div
          class="col{% if forloop.first %} active{% endif %}"
          data-value="{{ block.settings.value | escape }}"
          data-index="{{ forloop.index }}"
          {{ block.shopify_attributes }}
        >
          <div class="border rounded">
            <div class="title">{{ block.settings.label | escape }}</div>

            {% if block.settings.image != blank %}
              {{
                block.settings.image
                | image_url: width: block.settings.image_width
                | image_tag:
                  loading: 'lazy',
                  widths: '300,500,700,900',
                  sizes: '(max-width: 500px) 100vw, 300px',
                  alt: block.settings.label,
                  style: 'max-width: '
              }}
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Sofa Type Selector",
  "tag": "section",
  "class": "section-sofa-selector",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "step1_heading",
      "label": "Step Heading",
      "default": "Choose Your Sofa Type"
    }
  ],
  "blocks": [
    {
      "type": "sofa_type",
      "name": "Sofa Type Option",
      "limit": 12,
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Display Label",
          "default": "Modern Sofa",
          "info": "Shown above the image"
        },
        {
          "type": "text",
          "id": "value",
          "label": "Data Value",
          "default": "modern",
          "info": "Used for JavaScript filtering / selection (e.g. modern, classic, luxury)"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Sofa Image"
        },
        {
          "type": "range",
          "id": "image_width",
          "min": 120,
          "max": 600,
          "step": 10,
          "unit": "px",
          "label": "Max Image Width",
          "default": 280,
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Sofa Type Selector",
      "blocks": [
        {
          "type": "sofa_type",
          "settings": {
            "label": "Modern",
            "value": "modern",
            "image_width": 280
          }
        },
        {
          "type": "sofa_type",
          "settings": {
            "label": "Classic",
            "value": "classic",
            "image_width": 280
          }
        },
        {
          "type": "sofa_type",
          "settings": {
            "label": "Luxury",
            "value": "luxury",
            "image_width": 280
          }
        }
      ]
    }
  ]
}
{% endschema %}

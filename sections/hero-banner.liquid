<section class="hero-slider-section pos-relative overflow-hidden">

  <div class="hero-slider-scroll">
    {% for block in section.blocks %}
      <div class="hero-slide"
           style="background-image:url('{{ block.settings.image | img_url: '2000x' }}');">
        <div class="hero-slide-content">
          {% if block.settings.heading != blank %}
            <h2>{{ block.settings.heading }}</h2>
          {% endif %}

          {% if block.settings.text != blank %}
            <p>{{ block.settings.text }}</p>
          {% endif %}

          {% if block.settings.button_label != blank %}
            <a href="{{ block.settings.button_link }}" class="hero-btn">{{ block.settings.button_label }}</a>
          {% endif %}
        </div>

      </div>
    {% endfor %}
  </div>

</section>
<style>
.hero-slider-section {
  position: relative;
  height: {{ section.settings.slider_height }}px;
  color: white;
  overflow: hidden;
}

.hero-slider-scroll {
  display: flex;
  width: 100%;
  height: 100%;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  scroll-behavior: smooth;
  -webkit-overflow-scrolling: touch;
}

.hero-slider-scroll::-webkit-scrollbar {
  display: none;
}

.hero-slide {
  flex: 0 0 100%;
  height: 100%;
  background-size: cover;
  background-position: top center;
  background-repeat: no-repeat;   /* prevent tiling / “duplicate” look */
  scroll-snap-align: start;
  position: relative;
}

/* Slide Content */
.hero-slide-content {
  position: absolute;
  top: 100px; /* <-- fix distance from top */
  left: 50px;
  max-width: 500px;
}

.hero-slide-content h2 {
  font-size: 48px;
  font-weight: 700;
  margin-bottom: 15px;
}

.hero-slide-content p {
  font-size: 18px;
  margin-bottom: 20px;
}

.hero-btn {
  display: inline-block;
  padding: 12px 28px;
  border: 2px solid white;
  color: white;
  text-decoration: none;
  font-weight: 600;
  border-radius: 5px;
  transition: all 0.3s ease;
}
.hero-btn:hover {
  background: white;
  color: black;
}

/* Mobile */
@media (max-width: 768px) {
  /* Let the section grow instead of forcing a fixed height */
  .hero-slider-section {
    height: auto;
  }

  /* Inner wrappers also need auto height, or slides collapse */
  .hero-slider-scroll {
    height: auto;
  }

  .hero-slide {
    height: auto;
    background-size: contain;     /* show full image, no crop */
    background-position: top center;
    background-repeat: no-repeat; /* still avoid duplicates */
  }

  .hero-slide-content {
    left: 20px;
    bottom: 50px;
    top: auto;
    max-width: 80%;
  }

  .hero-slide-content h2 {
    font-size: 28px;
  }
  .hero-slide-content p {
    font-size: 16px;
  }
}
</style>



{% assign ai_gen_id = section.id | replace: '_', '' | downcase %}

{% style %}
.ai-faq-accordion-{{ ai_gen_id }} {
  padding-top: {{ section.settings.section_padding_top }}px;
  padding-bottom: {{ section.settings.section_padding_bottom }}px;
  max-width: 800px;
  margin: 0 auto;
}

.ai-faq-title-{{ ai_gen_id }} {
  text-align: center;
  margin-bottom: 30px;
  font-size: {{ section.settings.title_font_size }}px;
}

.ai-faq-item-{{ ai_gen_id }} {
  margin-bottom: 16px;
  overflow: hidden;
  border-radius: 8px;

  {% case section.settings.accordion_border_style %}
    {% when 'thin_line' %}
      border: 1px solid rgba(0,0,0,0.1);
    {% when 'shadow' %}
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    {% else %}
      border: none;
  {% endcase %}
}

.ai-faq-question-{{ ai_gen_id }} {
  padding: 20px;
  cursor: pointer;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: 600;
  background: {{ section.settings.question_bg_color }};
  color: {{ section.settings.question_text_color }};
}

.ai-faq-question-{{ ai_gen_id }}:hover {
  background: {{ section.settings.question_hover_color }};
}

.ai-faq-icon-{{ ai_gen_id }} {
  width: 18px;
  height: 18px;
  position: relative;
}

{% if section.settings.accordion_icon == 'plus_minus' %}
.ai-faq-icon-{{ ai_gen_id }}::before,
.ai-faq-icon-{{ ai_gen_id }}::after {
  content: '';
  position: absolute;
  background: currentColor;
}

.ai-faq-icon-{{ ai_gen_id }}::before {
  top: 50%;
  left: 0;
  width: 100%;
  height: 2px;
  transform: translateY(-50%);
}

.ai-faq-icon-{{ ai_gen_id }}::after {
  left: 50%;
  top: 0;
  width: 2px;
  height: 100%;
  transform: translateX(-50%);
}

.ai-faq-item-{{ ai_gen_id }}.active .ai-faq-icon-{{ ai_gen_id }}::after {
  display: none;
}
{% else %}
.ai-faq-icon-{{ ai_gen_id }}::before {
  content: '';
  width: 8px;
  height: 8px;
  border-right: 2px solid currentColor;
  border-bottom: 2px solid currentColor;
  transform: rotate(45deg);
  position: absolute;
  top: 4px;
  left: 4px;
}

.ai-faq-item-{{ ai_gen_id }}.active .ai-faq-icon-{{ ai_gen_id }}::before {
  transform: rotate(-135deg);
  top: 8px;
}
{% endif %}

.ai-faq-answer-{{ ai_gen_id }} {
  max-height: 0;
  overflow: hidden;
  transition: max-height .3s ease;
  background: {{ section.settings.answer_bg_color }};
  color: {{ section.settings.answer_text_color }};
}

.ai-faq-answer-inner-{{ ai_gen_id }} {
  padding: 0 20px 20px;
}

.ai-faq-help-center-{{ ai_gen_id }} {
  margin-top: 30px;
  text-align: {{ section.settings.link_alignment }};
}

.ai-faq-help-center-{{ ai_gen_id }} a {
  color: {{ section.settings.link_color }};
  text-decoration: underline;
}
{% endstyle %}

<div class="ai-faq-accordion-{{ ai_gen_id }}" {{ section.shopify_attributes }}>
  {% if section.settings.title != blank %}
    <h2 class="ai-faq-title-{{ ai_gen_id }}">{{ section.settings.title }}</h2>
  {% endif %}

  {% for block in section.blocks %}
    <div class="ai-faq-item-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
      <div
        class="ai-faq-question-{{ ai_gen_id }}"
        tabindex="0"
        role="button"
        aria-expanded="false"
      >
        <span>{{ block.settings.question }}</span>
        <span class="ai-faq-icon-{{ ai_gen_id }}"></span>
      </div>

      <div class="ai-faq-answer-{{ ai_gen_id }}">
        <div class="ai-faq-answer-inner-{{ ai_gen_id }}">
          {{ block.settings.answer }}
        </div>
      </div>
    </div>
  {% endfor %}

  {% if section.settings.help_center_text != blank %}
    <div class="ai-faq-help-center-{{ ai_gen_id }}">
      <a href="{{ section.settings.help_center_link }}" target="_blank" rel="noopener">
        {{ section.settings.help_center_text }}
      </a>
    </div>
  {% endif %}
</div>

<script>
(function() {
  const items = document.querySelectorAll('.ai-faq-accordion-{{ ai_gen_id }} .ai-faq-item-{{ ai_gen_id }}');

  items.forEach(item => {
    const question = item.querySelector('.ai-faq-question-{{ ai_gen_id }}');
    const answer = item.querySelector('.ai-faq-answer-{{ ai_gen_id }}');

    question.addEventListener('click', toggle);
    question.addEventListener('keydown', e => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        toggle();
      }
    });

    function toggle() {
      const open = item.classList.contains('active');

      items.forEach(i => {
        i.classList.remove('active');
        i.querySelector('.ai-faq-answer-{{ ai_gen_id }}').style.maxHeight = null;
        i.querySelector('.ai-faq-question-{{ ai_gen_id }}').setAttribute('aria-expanded', 'false');
      });

      if (!open) {
        item.classList.add('active');
        answer.style.maxHeight = answer.scrollHeight + 'px';
        question.setAttribute('aria-expanded', 'true');
      }
    }
  });
})();
</script>

